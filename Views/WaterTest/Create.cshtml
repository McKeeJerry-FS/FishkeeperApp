@model AquaHub.MVC.Models.WaterTest

@{
    ViewData["Title"] = "Log Water Test";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-droplet-fill"></i> Log Water Test
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="TankId" class="form-label fw-bold">Tank</label>
                                <select asp-for="TankId" id="tankSelect" class="form-select" asp-items="ViewBag.Tanks"
                                        required>
                                    <option value="">-- Select a Tank --</option>
                                </select>
                                <span asp-validation-for="TankId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Timestamp" class="form-label fw-bold">Test Date</label>
                                <input asp-for="Timestamp" class="form-control" type="datetime-local" />
                                <span asp-validation-for="Timestamp" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Temperature" class="form-label fw-bold">Temperature (°F)</label>
                                <input asp-for="Temperature" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Temperature" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-primary">General Parameters</h5>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PH" class="form-label fw-bold">pH</label>
                                <input asp-for="PH" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="PH" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Ammonia" class="form-label fw-bold">Ammonia (ppm)</label>
                                <input asp-for="Ammonia" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Ammonia" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Nitrite" class="form-label fw-bold">Nitrite (ppm)</label>
                                <input asp-for="Nitrite" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Nitrite" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Nitrate" class="form-label fw-bold">Nitrate (ppm)</label>
                                <input asp-for="Nitrate" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Nitrate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-success" id="freshwaterSection">Freshwater Parameters</h5>
                            </div>

                            <div class="col-md-4" id="ghField">
                                <label asp-for="GH" class="form-label fw-bold">GH (°dH)</label>
                                <input asp-for="GH" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="GH" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4" id="khField">
                                <label asp-for="KH" class="form-label fw-bold">KH (°dH)</label>
                                <input asp-for="KH" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="KH" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4" id="tdsField">
                                <label asp-for="TDS" class="form-label fw-bold">TDS (ppm)</label>
                                <input asp-for="TDS" class="form-control" type="number" step="1" />
                                <span asp-validation-for="TDS" class="text-danger small"></span>
                            </div>

                            <div class="col-12" id="plantedSection">
                                <hr>
                                <h5 class="text-success">Planted Tank Parameters</h5>
                            </div>

                            <div class="col-md-3" id="ironField">
                                <label asp-for="Iron" class="form-label fw-bold">Iron (Fe) (ppm)</label>
                                <input asp-for="Iron" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Iron" class="text-danger small"></span>
                                <small class="text-muted">Ideal: 0.1-0.5 ppm</small>
                            </div>

                            <div class="col-md-3" id="co2Field">
                                <label asp-for="CO2" class="form-label fw-bold">CO2 (ppm)</label>
                                <input asp-for="CO2" class="form-control" type="number" step="1" />
                                <span asp-validation-for="CO2" class="text-danger small"></span>
                                <small class="text-muted">Ideal: 20-30 ppm</small>
                            </div>

                            <div class="col-md-3" id="phosphatePlantedField">
                                <label asp-for="Phosphate" class="form-label fw-bold">Phosphate (PO4) (ppm)</label>
                                <input asp-for="Phosphate" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Phosphate" class="text-danger small"></span>
                                <small class="text-muted">Ideal: 0.5-2.0 ppm</small>
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-info" id="saltwaterSection">Saltwater Parameters</h5>
                            </div>

                            <div class="col-md-3" id="salinityField">
                                <label asp-for="Salinity" class="form-label fw-bold">Salinity (ppt)</label>
                                <input asp-for="Salinity" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Salinity" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3" id="alkalinityField">
                                <label asp-for="Alkalinity" class="form-label fw-bold">Alkalinity (dKH)</label>
                                <input asp-for="Alkalinity" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="Alkalinity" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3" id="calciumField">
                                <label asp-for="Calcium" class="form-label fw-bold">Calcium (ppm)</label>
                                <input asp-for="Calcium" class="form-control" type="number" step="1" />
                                <span asp-validation-for="Calcium" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3" id="magnesiumField">
                                <label asp-for="Magnesium" class="form-label fw-bold">Magnesium (ppm)</label>
                                <input asp-for="Magnesium" class="form-control" type="number" step="1" />
                                <span asp-validation-for="Magnesium" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4" id="phosphateField">
                                <label asp-for="Phosphate" class="form-label fw-bold">Phosphate (ppm)</label>
                                <input asp-for="Phosphate" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Phosphate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-info px-4 text-white">
                                <i class="bi bi-save"></i> Save Test
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
                    // Tank types from controller
                    const tankTypes = @Html.Raw(ViewBag.TankTypes ?? "{}");

                    // Define parameter visibility by tank type
                    const parameterVisibility = {
                        'Freshwater': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Planted': {
                            freshwater: true,
                            saltwater: false,
                            phosphate: false,
                            planted: true
                        },
                        'Saltwater': {
                        planted: false,
                            freshwater: false,
                            saltwater: true,
                            phosphate: true
                        },
                        'Reef': {
                        planted: false,
                            freshwater: false,
                            saltwater: true,
                            phosphate: true
                        },
                        'NanoReef': {
                        planted: false,
                            freshwater: false,
                            saltwater: true,
                            phosphate: true
                        },
                        'Brackish': {
                        planted: false,
                            freshwater: true,
                            saltwater: true,
                            phosphate: false
                        },
                        'Cichlid': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Betta': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Goldfish': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Shrimp': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Turtle': {
                        planted: false,
                            freshwater: true,
                            saltwater: false,
                            phosphate: false
                        },
                        'Quarantine': {
                        planted: false,
                            freshwater: true,
                            saltwater: true,
                            phosphate: false
                        },
                        'Other': {
                        planted: false,
                            freshwater: true,
                            saltwater: true,
                            phosphate: true
                        }
                    };

                    function updateParameterVisibility() {
                        const tankId = document.getElementById('tankSelect').value;

                        if (!tankId || tankId === '') {
                            // Show all if no tank selected
                            showAllParameters();
                            return;
                        }

                        const tankType = tankTypes[tankId];
                        const visibility = parameterVisibility[tankType] || parameterVisibility['Other'];

                        // Freshwater parameters
                        const freshwaterElements = ['freshwaterSection', 'ghField', 'khField', 'tdsField'];
                        freshwaterElements.forEach(id => {
                            const element = document.getElementById(id);
                            if (element) {
                                element.style.display = visibility.freshwater ? '' : 'none';
                            }
                        });

                        // Saltwater parameters (excluding phosphate)
                        const saltwaterElements = ['saltwaterSection', 'salinityField', 'alkalinityField', 'calciumField', 'magnesiumField'];
                        saltwaterElements.forEach(id => {
                            const element = document.getElementById(id);
                            if (element) {
                                element.style.display = visibility.saltwater ? '' : 'none';
                            }
                        });

                        // Planted tank parameters
                        const plantedElements = ['plantedSection', 'ironField', 'co2Field', 'phosphatePlantedField'];
                        plantedElements.forEach(id => {
                            const element = document.getElementById(id);
                            if (element) {
                                element.style.display = (visibility.planted === true) ? '' : 'none';
                            }
                        });

                        // Phosphate (shown for saltwater and reef only)
                        const phosphateElement = document.getElementById('phosphateField');
                        if (phosphateElement) {
                            phosphateElement.style.display = visibility.phosphate ? '' : 'none';
                        }
                    }

                    function showAllParameters() {
                        const allElements = [
                            'freshwaterSection', 'ghField', 'khField', 'tdsField',
                            'plantedSection', 'ironField', 'co2Field', 'phosphatePlantedField',
                            'saltwaterSection', 'salinityField', 'alkalinityField',
                            'calciumField', 'magnesiumField', 'phosphateField'
                        ];
                        allElements.forEach(id => {
                            const element = document.getElementById(id);
                            if (element) {
                                element.style.display = '';
                            }
                        });
                    }

                    // Attach event listener
                    document.getElementById('tankSelect').addEventListener('change', updateParameterVisibility);

                    // Run on page load
                    document.addEventListener('DOMContentLoaded', updateParameterVisibility);
    </script>
}