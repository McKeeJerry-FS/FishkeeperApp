@model AquaHub.MVC.Models.ViewModels.WaterParameterTrendsViewModel

@{
    ViewData["Title"] = "Water Test Trends";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-graph-up-arrow text-info"></i> Water Test Trends
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-funnel"></i> Filter by Tank
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Trends" class="row g-3">
                        <div class="col-md-10">
                            <select name="tankId" class="form-select" asp-items="ViewBag.TankList">
                                <option value="">-- Select a Tank --</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.TotalTests == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">No Water Test Data Available</h4>
            <p>Start recording water tests to see trends over time.</p>
            <a asp-action="Create" asp-route-tankId="@Model.Tank?.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Water Test
            </a>
        </div>
    }
    else
    {
        var parametersWithData = Model.ParameterTrends.Where(t => t.DataPoints.Any()).ToList();
        var parametersInRange = parametersWithData.Count(t => t.Statistics.IsInIdealRange);
        var parametersOutOfRange = parametersWithData.Count(t => !t.Statistics.IsInIdealRange);
        var totalParameters = parametersWithData.Count;
        var overallHealthPercentage = totalParameters > 0 ? (parametersInRange * 100.0 / totalParameters) : 0;
        
        string healthStatus;
        string healthClass;
        string healthIcon;
        
        if (overallHealthPercentage >= 80)
        {
            healthStatus = "Excellent";
            healthClass = "bg-success";
            healthIcon = "bi-check-circle-fill";
        }
        else if (overallHealthPercentage >= 60)
        {
            healthStatus = "Good";
            healthClass = "bg-info";
            healthIcon = "bi-info-circle-fill";
        }
        else if (overallHealthPercentage >= 40)
        {
            healthStatus = "Fair";
            healthClass = "bg-warning";
            healthIcon = "bi-exclamation-triangle-fill";
        }
        else
        {
            healthStatus = "Needs Attention";
            healthClass = "bg-danger";
            healthIcon = "bi-exclamation-octagon-fill";
        }

        <!-- Tank Health Status -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card border-2 border-@healthClass.Replace("bg-", "")">
                    <div class="card-header @healthClass text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi @healthIcon"></i> Tank Water Quality Status: <strong>@healthStatus</strong>
                            </div>
                            <div>
                                <span class="badge bg-white text-dark">@parametersInRange/@totalParameters Parameters in Range</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar @healthClass" role="progressbar" 
                                 style="width: @overallHealthPercentage.ToString("F0")%" 
                                 aria-valuenow="@overallHealthPercentage" aria-valuemin="0" aria-valuemax="100">
                                @overallHealthPercentage.ToString("F0")% Optimal
                            </div>
                        </div>
                        @if (parametersOutOfRange > 0)
                        {
                            <div class="mt-3">
                                <small class="text-danger">
                                    <i class="bi bi-exclamation-triangle"></i> 
                                    @parametersOutOfRange parameter(s) require attention
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Stats -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card border-info">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-info-circle"></i> Test Summary
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h5>@Model.TotalTests</h5>
                                <small class="text-muted">Total Tests</small>
                            </div>
                            <div class="col-md-3">
                                <h5>@Model.StartDate.ToString("MMM dd, yyyy")</h5>
                                <small class="text-muted">Start Date</small>
                            </div>
                            <div class="col-md-3">
                                <h5>@Model.EndDate.ToString("MMM dd, yyyy")</h5>
                                <small class="text-muted">End Date</small>
                            </div>
                            <div class="col-md-3">
                                <h5>@Model.AverageTestFrequency.ToString("F1") days</h5>
                                <small class="text-muted">Avg Test Frequency</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var trend in parametersWithData)
            {
                <div class="col-md-6">
                    <div class="card h-100 @(trend.Statistics.IsInIdealRange ? "border-success" : "border-warning") border-2">
                        <div class="card-header @GetCardClass(trend.Statistics.IsInIdealRange)">
                            <i class="bi @(trend.Statistics.IsInIdealRange ? "bi-check-circle" : "bi-exclamation-triangle")"></i> 
                            @trend.ParameterName @if(!string.IsNullOrEmpty(trend.Unit)) { <span>(@trend.Unit)</span> }
                        </div>
                        <div class="card-body">
                            <canvas id="chart_@trend.ParameterName.Replace(" ", "_")"></canvas>
                            
                            <!-- Statistics -->
                            <div class="mt-3">
                                <div class="row small">
                                    <div class="col-4">
                                        <strong>Current:</strong> @trend.Statistics.CurrentValue?.ToString("F2")
                                    </div>
                                    <div class="col-4">
                                        <strong>Average:</strong> @trend.Statistics.Average?.ToString("F2")
                                    </div>
                                    <div class="col-4">
                                        <strong>Range:</strong> @trend.Statistics.Min?.ToString("F2") - @trend.Statistics.Max?.ToString("F2")
                                    </div>
                                </div>
                                @if (trend.IdealMin.HasValue || trend.IdealMax.HasValue)
                                {
                                    <div class="mt-2 small">
                                        <span class="badge @(trend.Statistics.IsInIdealRange ? "bg-success" : "bg-warning")">
                                            @if (trend.Statistics.IsInIdealRange)
                                            {
                                                <i class="bi bi-check-circle"></i> <text>In Ideal Range</text>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-triangle"></i> <text>Out of Range</text>
                                            }
                                        </span>
                                        <small class="text-muted ms-2">
                                            Ideal: @trend.IdealMin?.ToString("F2") - @trend.IdealMax?.ToString("F2") @trend.Unit
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        @foreach (var trend in Model.ParameterTrends.Where(t => t.DataPoints.Any()))
        {
            var chartId = $"chart_{trend.ParameterName.Replace(" ", "_")}";
            var dataPoints = trend.DataPoints.OrderBy(d => d.Date).ToList();
            
            <text>
            new Chart(document.getElementById('@chartId'), {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(dataPoints.Select(d => d.Date.ToString("MM/dd/yyyy")))),
                    datasets: [{
                        label: '@trend.ParameterName (@trend.Unit)',
                        data: @Html.Raw(Json.Serialize(dataPoints.Select(d => d.Value))),
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.1)',
                        tension: 0.1,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false
                        }
                    }
                }
            });
            </text>
        }
    </script>
}

@functions {
    string GetCardClass(bool isInRange)
    {
        return isInRange ? "bg-success text-white" : "bg-warning text-dark";
    }
}
