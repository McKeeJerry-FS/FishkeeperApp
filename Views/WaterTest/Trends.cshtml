@model IEnumerable<WaterTest>

@{
    ViewData["Title"] = "Water Test Trends";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-graph-up-arrow text-info"></i> Water Test Trends
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-funnel"></i> Filter by Tank
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Trends" class="row g-3">
                        <div class="col-md-10">
                            <select name="tankId" class="form-select">
                                <option value="">-- All Tanks --</option>
                                @foreach (var tank in ViewBag.TankList as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))
                                {
                                    <option value="@tank.Value" selected="@(tank.Selected)">@tank.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-info-circle display-1"></i>
            <h4 class="mt-3">No Water Test Data Available</h4>
            <p>Start recording water tests to see trends over time.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Water Test
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Temperature Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-thermometer-half"></i> Temperature Trend
                    </div>
                    <div class="card-body">
                        <canvas id="tempChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- pH Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <i class="bi bi-droplet"></i> pH Trend
                    </div>
                    <div class="card-body">
                        <canvas id="phChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Ammonia Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-warning text-white">
                        <i class="bi bi-exclamation-triangle"></i> Ammonia Trend
                    </div>
                    <div class="card-body">
                        <canvas id="ammoniaChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Nitrite Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-droplet-half"></i> Nitrite Trend
                    </div>
                    <div class="card-body">
                        <canvas id="nitriteChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Nitrate Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-danger text-white">
                        <i class="bi bi-droplet-fill"></i> Nitrate Trend
                    </div>
                    <div class="card-body">
                        <canvas id="nitrateChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Salinity Trend -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-secondary text-white">
                        <i class="bi bi-water"></i> Salinity Trend
                    </div>
                    <div class="card-body">
                        <canvas id="salinityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Table -->
        <div class="card mt-4">
            <div class="card-header bg-dark text-white">
                <i class="bi bi-table"></i> Historical Data
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Tank</th>
                                <th>Temp (°F)</th>
                                <th>pH</th>
                                <th>Ammonia</th>
                                <th>Nitrite</th>
                                <th>Nitrate</th>
                                <th>Salinity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var test in Model.OrderByDescending(t => t.Timestamp))
                            {
                                <tr>
                                    <td>@test.Timestamp.ToString("MMM dd, yyyy")</td>
                                    <td>@test.Tank?.Name</td>
                                    <td>@test.Temperature?.ToString("F1")</td>
                                    <td>@test.PH?.ToString("F1")</td>
                                    <td>@test.Ammonia?.ToString("F2")</td>
                                    <td>@test.Nitrite?.ToString("F2")</td>
                                    <td>@test.Nitrate?.ToString("F1")</td>
                                    <td>@test.Salinity?.ToString("F3")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const testData = @Html.Raw(Json.Serialize(Model.OrderBy(t => t.Timestamp).Select(t => new {
            date = t.Timestamp.ToString("MM/dd/yyyy"),
            temp = t.Temperature,
            ph = t.PH,
            ammonia = t.Ammonia,
            nitrite = t.Nitrite,
            nitrate = t.Nitrate,
            salinity = t.Salinity
        })));

        const labels = testData.map(d => d.date);

        // Temperature Chart
        new Chart(document.getElementById('tempChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Temperature (°F)',
                    data: testData.map(d => d.temp),
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });

        // pH Chart
        new Chart(document.getElementById('phChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'pH',
                    data: testData.map(d => d.ph),
                    borderColor: 'rgb(54, 162, 235)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });

        // Ammonia Chart
        new Chart(document.getElementById('ammoniaChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Ammonia (ppm)',
                    data: testData.map(d => d.ammonia),
                    borderColor: 'rgb(255, 205, 86)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });

        // Nitrite Chart
        new Chart(document.getElementById('nitriteChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nitrite (ppm)',
                    data: testData.map(d => d.nitrite),
                    borderColor: 'rgb(153, 102, 255)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });

        // Nitrate Chart
        new Chart(document.getElementById('nitrateChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nitrate (ppm)',
                    data: testData.map(d => d.nitrate),
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });

        // Salinity Chart
        new Chart(document.getElementById('salinityChart'), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Salinity (sg)',
                    data: testData.map(d => d.salinity),
                    borderColor: 'rgb(201, 203, 207)',
                    tension: 0.1
                }]
            },
            options: { responsive: true, maintainAspectRatio: true }
        });
    </script>
}
