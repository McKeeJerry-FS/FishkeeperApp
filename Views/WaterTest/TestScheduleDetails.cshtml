@model AquaHub.MVC.Models.ViewModels.TestScheduleOptimizerViewModel

@{
    ViewData["Title"] = $"Test Schedule - {Model.Tank.Name}";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Water Tests</a></li>
                    <li class="breadcrumb-item"><a asp-action="TestSchedule">Test Schedule</a></li>
                    <li class="breadcrumb-item active">@Model.Tank.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Tank Info Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0 border-start border-info border-5">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="mb-2">
                                <i class="bi bi-droplet-fill text-info"></i> @Model.Tank.Name
                            </h2>
                            <p class="text-muted mb-0">
                                <strong>@Model.Tank.Type</strong> • @Model.Tank.VolumeGallons gallons • 
                                @Model.Recommendation.TankAgeDescription
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge bg-@(Model.Recommendation.IsTestingOptimal ? "success" : "warning") fs-5">
                                @(Model.Recommendation.IsTestingOptimal ? "Optimal Testing" : "Needs Improvement")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted text-uppercase d-block mb-1">Tank Age</small>
                            <h4 class="mb-0 fw-bold">@Model.Recommendation.TankAgeInDays days</h4>
                        </div>
                        <div class="rounded-circle bg-primary bg-opacity-10 p-2">
                            <i class="bi bi-calendar3 text-primary" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted text-uppercase d-block mb-1">Tests Recorded</small>
                            <h4 class="mb-0 fw-bold">@Model.Recommendation.TotalTestsRecorded</h4>
                        </div>
                        <div class="rounded-circle bg-success bg-opacity-10 p-2">
                            <i class="bi bi-clipboard-data text-success" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted text-uppercase d-block mb-1">Maturity Level</small>
                            <h4 class="mb-0 fw-bold">@Model.Recommendation.MaturityLevel</h4>
                        </div>
                        <div class="rounded-circle bg-info bg-opacity-10 p-2">
                            <i class="bi bi-speedometer text-info" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted text-uppercase d-block mb-1">Last Test</small>
                            <h4 class="mb-0 fw-bold">
                                @if (Model.Recommendation.LastTestDate.HasValue)
                                {
                                    var daysSince = (DateTime.UtcNow - Model.Recommendation.LastTestDate.Value).Days;
                                    <text>@daysSince days ago</text>
                                }
                                else
                                {
                                    <text>Never</text>
                                }
                            </h4>
                        </div>
                        <div class="rounded-circle bg-warning bg-opacity-10 p-2">
                            <i class="bi bi-clock-history text-warning" style="font-size: 1.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Warnings and Suggestions -->
    @if (Model.Recommendation.Warnings.Any() || Model.Recommendation.Suggestions.Any())
    {
        <div class="row mb-4">
            @if (Model.Recommendation.Warnings.Any())
            {
                <div class="col-md-6 mb-3">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> Warnings</h5>
                        <ul class="mb-0">
                            @foreach (var warning in Model.Recommendation.Warnings)
                            {
                                <li>@warning</li>
                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Recommendation.Suggestions.Any())
            {
                <div class="col-md-6 mb-3">
                    <div class="alert alert-info">
                        <h5 class="alert-heading"><i class="bi bi-lightbulb-fill"></i> Suggestions</h5>
                        <ul class="mb-0">
                            @foreach (var suggestion in Model.Recommendation.Suggestions)
                            {
                                <li>@suggestion</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Recommended Test Schedule -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-calendar-check text-primary"></i> Recommended Test Schedule</h4>
                        @if (Model.Recommendation.CanCreateReminders)
                        {
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRemindersModal">
                                <i class="bi bi-bell"></i> Create Reminders
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Parameter</th>
                                    <th>Recommended Frequency</th>
                                    <th>Current Frequency</th>
                                    <th>Importance</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var param in Model.Recommendation.RecommendedSchedule)
                                {
                                    var statusClass = "";
                                    var statusIcon = "";
                                    
                                    if (param.CurrentFrequencyDays.HasValue)
                                    {
                                        if (param.CurrentFrequencyDays > param.RecommendedFrequencyDays * 1.5)
                                        {
                                            statusClass = "table-warning";
                                            statusIcon = "bi-arrow-down-circle text-warning";
                                        }
                                        else if (param.CurrentFrequencyDays <= param.RecommendedFrequencyDays)
                                        {
                                            statusClass = "table-success";
                                            statusIcon = "bi-check-circle text-success";
                                        }
                                    }
                                    else if (param.IsRequired)
                                    {
                                        statusClass = "table-danger";
                                        statusIcon = "bi-x-circle text-danger";
                                    }

                                    <tr class="@statusClass">
                                        <td>
                                            <i class="bi @param.IconClass text-@param.ColorClass me-2"></i>
                                            <strong>@param.ParameterDisplayName</strong>
                                            @if (param.IsRequired)
                                            {
                                                <span class="badge bg-danger ms-2">Required</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@param.RecommendedFrequencyDescription</span>
                                        </td>
                                        <td>
                                            @if (param.CurrentFrequencyDays.HasValue)
                                            {
                                                <i class="bi @statusIcon me-1"></i>
                                                <text>Every @param.CurrentFrequencyDays days</text>
                                            }
                                            else
                                            {
                                                <i class="bi @statusIcon me-1"></i>
                                                <span class="text-muted">Never tested</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-@(param.Importance == "Critical" ? "danger" : param.Importance == "High" ? "warning" : param.Importance == "Medium" ? "info" : "secondary")">
                                                @param.Importance
                                            </span>
                                        </td>
                                        <td><small class="text-muted">@param.Reason</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12 text-center">
            <a asp-action="Create" asp-route-tankId="@Model.Tank.Id" class="btn btn-success btn-lg me-2">
                <i class="bi bi-plus-circle"></i> Log Water Test Now
            </a>
            <a asp-action="Index" asp-route-tankId="@Model.Tank.Id" class="btn btn-outline-primary btn-lg me-2">
                <i class="bi bi-clock-history"></i> View Test History
            </a>
            <a asp-action="TestSchedule" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

<!-- Create Reminders Modal -->
<div class="modal fade" id="createRemindersModal" tabindex="-1" aria-labelledby="createRemindersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-action="CreateScheduleReminders" method="post">
                <input type="hidden" name="tankId" value="@Model.Tank.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="createRemindersModalLabel">
                        <i class="bi bi-bell"></i> Create Testing Reminders
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">Select the parameters you want to create reminders for:</p>
                    
                    <div class="list-group">
                        @foreach (var param in Model.Recommendation.RecommendedSchedule)
                        {
                            <label class="list-group-item">
                                <input class="form-check-input me-2" type="checkbox" name="selectedParameters" value="@param.ParameterName" checked="@param.IsRequired">
                                <strong>@param.ParameterDisplayName</strong>
                                <span class="badge bg-primary float-end">@param.RecommendedFrequencyDescription</span>
                                <br>
                                <small class="text-muted">@param.Reason</small>
                            </label>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Reminders
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
