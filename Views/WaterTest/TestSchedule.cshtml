@{
    ViewData["Title"] = "Test Schedule Optimizer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-gradient text-white py-3"
                     style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h2 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Test Schedule Optimizer
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        Get personalized water testing recommendations based on your tank's age, type, and current
                        testing habits.
                    </p>

                    <form asp-action="TestSchedule" method="get">
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-droplet-fill text-info"></i> Select Tank
                            </label>
                            <select name="tankId" class="form-select" onchange="this.form.submit()">
                                <option value="">-- Choose a tank to analyze --</option>
                                @if (ViewBag.Tanks != null)
                                {
                                    var tankList = ViewBag.Tanks as SelectList;
                                    if (tankList != null)
                                    {
                                        @foreach (var tank in tankList)
                                        {
                                            <option value="@tank.Value" selected="@(tank.Selected)">@tank.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </form>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 bg-light border-0">
                                <div class="card-body text-center">
                                    <i class="bi bi-graph-up-arrow text-primary" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Smart Analysis</h5>
                                    <p class="text-muted mb-0">Recommendations based on tank age and type</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 bg-light border-0">
                                <div class="card-body text-center">
                                    <i class="bi bi-bell text-warning" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Auto Reminders</h5>
                                    <p class="text-muted mb-0">Create testing reminders with one click</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle text-info"></i> How It Works</h5>
                    <ol class="mb-0">
                        <li class="mb-2"><strong>Select Your Tank:</strong> Choose the tank you want to optimize testing
                            for</li>
                            <li class="mb-2"><strong>Review Recommendations:</strong> See parameter-specific testing
                                frequencies based on your tank's maturity</li>
                                <li class="mb-2"><strong>Compare Habits:</strong> View how your current testing compares to
                                    recommendations</li>
                                    <li class="mb-2"><strong>Create Reminders:</strong> Automatically set up testing reminders to
                                        stay on track</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>