@model AquaHub.MVC.Models.WaterTest

@{
    ViewData["Title"] = "Delete Water Test";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Delete Water Test
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle-fill"></i> Confirm Deletion
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this water test record?</p>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">Test Date:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Timestamp.ToString("MMMM dd, yyyy")</dd>

                        @if (Model.PH.HasValue)
                        {
                            <dt class="col-sm-4">pH:</dt>
                            <dd class="col-sm-8">@Model.PH.Value.ToString("F2")</dd>
                        }

                        @if (Model.Temperature.HasValue)
                        {
                            <dt class="col-sm-4">Temperature:</dt>
                            <dd class="col-sm-8">@Model.Temperature.Value.ToString("F1")Â°F</dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
