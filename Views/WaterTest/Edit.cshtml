@model AquaHub.MVC.Models.WaterTest

@{
    ViewData["Title"] = "Edit Water Test";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Water Test
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TankId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Timestamp" class="form-label fw-bold">Test Date</label>
                                <input asp-for="Timestamp" class="form-control" type="datetime-local" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Temperature" class="form-label fw-bold">Temperature (°F)</label>
                                <input asp-for="Temperature" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-primary">General Parameters</h5>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="PH" class="form-label fw-bold">pH</label>
                                <input asp-for="PH" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Ammonia" class="form-label fw-bold">Ammonia (ppm)</label>
                                <input asp-for="Ammonia" class="form-control" type="number" step="0.01" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Nitrite" class="form-label fw-bold">Nitrite (ppm)</label>
                                <input asp-for="Nitrite" class="form-control" type="number" step="0.01" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Nitrate" class="form-label fw-bold">Nitrate (ppm)</label>
                                <input asp-for="Nitrate" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-success">Freshwater Parameters</h5>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="GH" class="form-label fw-bold">GH (°dH)</label>
                                <input asp-for="GH" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="KH" class="form-label fw-bold">KH (°dH)</label>
                                <input asp-for="KH" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="TDS" class="form-label fw-bold">TDS (ppm)</label>
                                <input asp-for="TDS" class="form-control" type="number" step="1" />
                            </div>

                            <div class="col-12">
                                <hr>
                                <h5 class="text-info">Saltwater Parameters</h5>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Salinity" class="form-label fw-bold">Salinity</label>
                                <input asp-for="Salinity" class="form-control" type="number" step="0.001" min="1.020"
                                       max="1.030" />
                                <small class="text-muted" id="salinityRangeInfoEdit"></small>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Alkalinity" class="form-label fw-bold">Alkalinity (dKH)</label>
                                <input asp-for="Alkalinity" class="form-control" type="number" step="0.1" />
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Calcium" class="form-label fw-bold">Calcium (ppm)</label>
                                <input asp-for="Calcium" class="form-control" type="number" step="1" />
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Magnesium" class="form-label fw-bold">Magnesium (ppm)</label>
                                <input asp-for="Magnesium" class="form-control" type="number" step="1" />
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Phosphate" class="form-label fw-bold">Phosphate (ppm)</label>
                                <input asp-for="Phosphate" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>

                        <!-- Planted Tank Parameters -->
                        <div id="plantedSection" class="row g-3 mt-2">
                            <div class="col-12">
                                <hr>
                                <h5 class="text-success"><i class="bi bi-flower1"></i> Planted Tank Parameters</h5>
                            </div>

                            <div class="col-md-4" id="ironField">
                                <label asp-for="Iron" class="form-label fw-bold">Iron (Fe) (ppm)</label>
                                <input asp-for="Iron" class="form-control" type="number" step="0.01"
                                       placeholder="Ideal: 0.1 - 0.5 ppm" />
                                <small class="text-muted">Optimal range: 0.1 - 0.5 ppm</small>
                            </div>

                            <div class="col-md-4" id="co2Field">
                                <label asp-for="CO2" class="form-label fw-bold">CO₂ (ppm)</label>
                                <input asp-for="CO2" class="form-control" type="number" step="1"
                                       placeholder="Ideal: 20 - 30 ppm" />
                                <small class="text-muted">Optimal range: 20 - 30 ppm</small>
                            </div>

                            <div class="col-md-4" id="phosphatePlantedField">
                                <label class="form-label fw-bold">Phosphate - Planted (ppm)</label>
                                <input asp-for="Phosphate" class="form-control" type="number" step="0.01"
                                       placeholder="Ideal: 0.5 - 2.0 ppm" />
                                <small class="text-muted">Planted tanks: 0.5 - 2.0 ppm</small>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-warning px-4">
                                <i class="bi bi-save"></i> Update
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4 ms-auto">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
                // Show/hide planted tank parameters and update salinity info based on tank type
                document.addEventListener('DOMContentLoaded', function () {
                    var tankType = '@Model.Tank?.Type';
                    var isPlanted = tankType === 'Planted';
                    var plantedSection = document.getElementById('plantedSection');
                    if (plantedSection) {
                        plantedSection.style.display = isPlanted ? '' : 'none';
                    }
                    var salinityInfo = document.getElementById('salinityRangeInfoEdit');
                    if (salinityInfo) {
                        if (tankType === 'NanoReef') {
                            salinityInfo.innerText = 'Ideal: 1.023 - 1.026 SG';
                        } else if (tankType === 'Reef' || tankType === 'Saltwater') {
                            salinityInfo.innerText = 'Ideal: 1.020 - 1.026 SG';
                        } else if (tankType === 'Brackish') {
                            salinityInfo.innerText = 'Ideal: 1.005 - 1.015 SG';
                        } else {
                            salinityInfo.innerText = '';
                        }
                    }
                });
    </script>
}