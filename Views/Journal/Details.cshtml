@model AquaHub.MVC.Models.JournalEntry

@{
    ViewData["Title"] = "Journal Entry Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-journal-text"></i> Journal Entry Details
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">
                                <i class="bi bi-droplet-fill"></i> Tank
                            </h5>
                            <p class="fs-5">
                                <span class="badge bg-info fs-6">@Model.Tank?.Name</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">
                                <i class="bi bi-calendar3"></i> Date & Time
                            </h5>
                            <p class="fs-5">
                                @Model.Timestamp.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </p>
                        </div>
                    </div>

                    <hr>

                    <div class="mb-4">
                        <h3 class="mb-3">
                            <i class="bi bi-card-heading text-primary"></i> @Model.Title
                        </h3>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-3">
                            <i class="bi bi-text-paragraph"></i> Entry Content
                        </h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Content</p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-image"></i> Image
                            </h5>
                            <img src="@Model.ImagePath" alt="Journal Entry Image" class="img-fluid rounded shadow"
                                 style="max-width: 100%;">
                        </div>
                    }

                    @if (Model.MaintenanceLinks.Any())
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-tools"></i> Linked Maintenance Activities
                            </h5>
                            <ul class="list-group">
                                @foreach (var link in Model.MaintenanceLinks)
                                {
                                    <li class="list-group-item">
                                        <strong>@link.MaintenanceLog?.Type</strong> -
                                        @link.MaintenanceLog?.Timestamp.ToLocalTime().ToString("MMM dd, yyyy")
                                        @if (!string.IsNullOrEmpty(link.MaintenanceLog?.Notes))
                                        {
                                            <br>
                                        
                                            <small class="text-muted">@link.MaintenanceLog.Notes</small>
                                        }
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.WaterTestLinks.Any())
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-droplet-half"></i> Linked Water Tests
                            </h5>
                            <ul class="list-group">
                                @foreach (var link in Model.WaterTestLinks)
                                {
                                    <li class="list-group-item">
                                        <strong>Water Test</strong> -
                                        @link.WaterTest?.Timestamp.ToLocalTime().ToString("MMM dd, yyyy")
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Back to Journal
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>