@model IEnumerable<Equipment>

@{
    ViewData["Title"] = "Equipment";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-gear-fill text-primary"></i> Equipment
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Equipment
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-gear display-1"></i>
            <h4 class="mt-3">No Equipment Found</h4>
            <p>Start tracking your aquarium equipment to monitor maintenance and performance.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Your First Equipment
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">
                                        @if (item is Filter)
                                        {
                                            <i class="bi bi-funnel text-info"></i>
                                        }
                                        else if (item is Heater)
                                        {
                                            <i class="bi bi-thermometer-high text-danger"></i>
                                        }
                                        else if (item is Light)
                                        {
                                            <i class="bi bi-lightbulb text-warning"></i>
                                        }
                                        else if (item is ProteinSkimmer)
                                        {
                                            <i class="bi bi-water text-primary"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-gear text-secondary"></i>
                                        }
                                        @item.Model
                                    </h5>
                                    @if (!string.IsNullOrEmpty(item.Brand))
                                    {
                                        <small class="text-muted">@item.Brand</small>
                                    }
                                </div>
                                <span class="badge bg-secondary">@item.Model</span>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-droplet"></i> @item.Tank?.Name
                                </small>
                            </div>

                            <div class="mb-2">
                                <small>
                                    <i class="bi bi-calendar-check"></i>
                                    Installed: @item.InstalledOn.ToString("MMM dd, yyyy")
                                </small>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Brand))
                            {
                                <div class="mb-2">
                                    <small>
                                        <i class="bi bi-tag"></i>
                                        @item.Brand
                                    </small>
                                </div>
                            }

                            @if (item is Filter filter)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <small>
                                        <strong>Type:</strong> @filter.Type<br />
                                        <strong>Flow Rate:</strong> @filter.FlowRate GPH<br />
                                        <strong>Last Maintained:</strong> @filter.LastMaintenanceDate.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                            }
                            else if (item is Heater heater)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <small>
                                        <strong>Min Temp:</strong> @heater.MinTemperature°F<br />
                                        <strong>Max Temp:</strong> @heater.MaxTemperature°F
                                    </small>
                                </div>
                            }
                            else if (item is Light light)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <small>
                                        <strong>Wattage:</strong> @light.Wattage W<br />
                                        <strong>Spectrum:</strong> @light.Spectrum<br />
                                        <strong>Hours/Day:</strong> @light.Schedule
                                    </small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                    class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .hover-shadow {
            transition: box-shadow 0.3s ease-in-out;
        }

        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}