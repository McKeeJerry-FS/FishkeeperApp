@model AquaHub.MVC.Models.ViewModels.EquipmentEditViewModel

@{
    ViewData["Title"] = "Edit Equipment";
    var equipmentType = Model.EquipmentType;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">
                        @if (Model.EquipmentType == "Filter")
                        {
                            <i class="bi bi-funnel"></i>
                        }
                        else if (Model.EquipmentType == "Heater")
                        {
                            <i class="bi bi-thermometer-high"></i>
                        }
                        else if (Model.EquipmentType == "Light")
                        {
                            <i class="bi bi-lightbulb"></i>
                        }
                        else if (Model.EquipmentType == "ProteinSkimmer")
                        {
                            <i class="bi bi-water"></i>
                        }
                        else
                        {
                            <i class="bi bi-gear"></i>
                        }
                        Edit @equipmentType
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TankId" />
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="ImageFile" class="form-label fw-bold">Equipment Image</label>
                                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                            </div>
                            @if (Model.ImageData != null && Model.ImageType != null)
                            {
                                <div class="col-12">
                                    <label class="form-label">Current Image Preview:</label>
                                    <div class="border rounded p-2 mb-2" style="max-width:300px;">
                                        <img src="data:@Model.ImageType;base64,@Convert.ToBase64String(Model.ImageData)"
                                             alt="Equipment Image" class="img-fluid" style="max-height:200px;" />
                                    </div>
                                </div>
                            }
                            <div class="col-12">
                                <label asp-for="Brand" class="form-label fw-bold">Brand</label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Model" class="form-label fw-bold">Model</label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="InstalledOn" class="form-label fw-bold">Installed On</label>
                                <input asp-for="InstalledOn" class="form-control" type="date" />
                                <span asp-validation-for="InstalledOn" class="text-danger small"></span>
                            </div>

                            @if (Model.EquipmentType == "Filter")
                            {
                                <div class="col-12">
                                    <hr />
                                    <h5 class="text-info">Filter Settings</h5>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FilterType" class="form-label fw-bold">Filter Type</label>
                                    <input asp-for="FilterType" class="form-control" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="FlowRate" class="form-label fw-bold">Flow Rate (GPH)</label>
                                    <input asp-for="FlowRate" class="form-control" step="1" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="Media" class="form-label fw-bold">Media</label>
                                    <input asp-for="Media" class="form-control" />
                                </div>
                                <div class="col-12">
                                    <label asp-for="LastMaintenanceDate" class="form-label fw-bold">Last Maintenance
                                        Date</label>
                                        <input asp-for="LastMaintenanceDate" class="form-control" type="date" />
                                    </div>
                                }
                            else if (Model.EquipmentType == "Heater")
                                {
                                    <div class="col-12">
                                        <hr />
                                        <h5 class="text-danger">Heater Settings</h5>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="MinTemperature" class="form-label fw-bold">Min Temperature (°F)</label>
                                        <input asp-for="MinTemperature" class="form-control" step="0.1" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="MaxTemperature" class="form-label fw-bold">Max Temperature (°F)</label>
                                        <input asp-for="MaxTemperature" class="form-control" step="0.1" />
                                    </div>
                                }
                                <!-- Add more type-specific fields here as needed -->
                            </div>

                            <div class="d-flex gap-2 mt-4">
                                <button type="submit" class="btn btn-warning px-4">
                                    <i class="bi bi-save"></i> Update Equipment
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }