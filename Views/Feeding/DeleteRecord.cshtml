@model AquaHub.MVC.Models.FeedingRecord

@{
    ViewData["Title"] = "Delete Feeding Record";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Feeding Record</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this feeding record?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Tank</dt>
                        <dd class="col-sm-9">@Model.Tank?.Name</dd>

                        <dt class="col-sm-3">Feed Name</dt>
                        <dd class="col-sm-9">@Model.FeedName</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">@Model.FeedType</dd>

                        <dt class="col-sm-3">Brand</dt>
                        <dd class="col-sm-9">@Model.Brand</dd>

                        <dt class="col-sm-3">Amount</dt>
                        <dd class="col-sm-9">@Model.Amount @Model.Unit</dd>

                        <dt class="col-sm-3">Fed Date & Time</dt>
                        <dd class="col-sm-9">
                            @Model.FedDateTime.ToString("MMMM dd, yyyy hh:mm tt")
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.WasScheduled)
                            {
                                <span class="badge bg-success">Scheduled</span>
                                <span class="text-muted">(@Model.TimeDifference)</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Manual</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fed By</dt>
                        <dd class="col-sm-9">@Model.User?.FullName</dd>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-3">Notes</dt>
                            <dd class="col-sm-9">@Model.Notes</dd>
                        }
                    </dl>

                    <form asp-action="DeleteRecord" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Records" asp-route-tankId="@Model.TankId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>