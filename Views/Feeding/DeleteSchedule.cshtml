@model AquaHub.MVC.Models.FeedingSchedule

@{
    ViewData["Title"] = "Delete Feeding Schedule";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Feeding Schedule</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this feeding schedule?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Tank</dt>
                        <dd class="col-sm-9">@Model.Tank?.Name</dd>

                        <dt class="col-sm-3">Feed Name</dt>
                        <dd class="col-sm-9">@Model.FeedName</dd>

                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">@Model.FeedType</dd>

                        <dt class="col-sm-3">Brand</dt>
                        <dd class="col-sm-9">@Model.Brand</dd>

                        <dt class="col-sm-3">Amount</dt>
                        <dd class="col-sm-9">@Model.Amount @Model.Unit</dd>

                        <dt class="col-sm-3">Feeding Times</dt>
                        <dd class="col-sm-9">
                            @foreach (var time in Model.ParsedFeedingTimes)
                            {
                                <span class="badge bg-secondary me-1">@time.ToString(@"hh\:mm")</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>

                    <form asp-action="DeleteSchedule" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Schedule
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>