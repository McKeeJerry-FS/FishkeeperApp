<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AquaHub</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AquaHub.MVC.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-droplet-fill"></i> AquaHub
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tank" asp-action="Index">
                                <i class="bi bi-droplet"></i> Tanks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Livestock" asp-action="Index">
                                <i class="bi bi-fish"></i> Livestock
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                                   data-bs-toggle="dropdown">
                                <i class="bi bi-speedometer"></i> Monitoring
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="WaterTest" asp-action="Index">
                                    <i class="bi bi-droplet-fill text-info"></i> Water Tests
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="MaintenanceLog" asp-action="Index">
                                    <i class="bi bi-wrench text-success"></i> Maintenance Logs
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="GrowthRecord" asp-action="Index">
                                    <i class="bi bi-graph-up text-primary"></i> Growth Records
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Equipment" asp-action="Index">
                                <i class="bi bi-gear"></i> Equipment
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Feeding" asp-action="Dashboard">
                                <i class="bi bi-egg-fried"></i> Feeding
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Supply" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Supplies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Expense" asp-action="Index">
                                <i class="bi bi-cash"></i> Expenses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reminder" asp-action="Index">
                                <i class="bi bi-bell"></i> Reminders
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-5 py-4">
        <div class="container text-center text-muted">
            <p class="mb-2">
                <i class="bi bi-droplet-fill text-primary"></i>
                <strong>AquaHub</strong> - Your Complete Aquarium Management Solution
            </p>
            <p class="mb-0 small">
                &copy; 2026 AquaHub - <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy
                Policy</a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>