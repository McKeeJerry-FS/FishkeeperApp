@model AquaHub.MVC.Models.SupplyItem
@using AquaHub.MVC.Models.Enums

@{
    ViewData["Title"] = $"Edit - {Model.Name}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Supplies</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <h1 class="display-6 mb-4">
        <i class="bi bi-pencil text-primary"></i> Edit Supply Item
    </h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <!-- Basic Information -->
                    <div class="col-12">
                        <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select" required>
                            @foreach (SupplyCategory cat in Enum.GetValues(typeof(SupplyCategory)))
                            {
                                <option value="@((int)cat)" selected="@(Model.Category == cat)">@cat</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TankId" class="form-label">Tank (Optional)</label>
                        <select asp-for="TankId" asp-items="ViewBag.Tanks" class="form-select">
                            <option value="">General Supply (Not tank-specific)</option>
                        </select>
                        <span asp-validation-for="TankId" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>

                    <!-- Inventory Information -->
                    <div class="col-12 mt-4">
                        <h5 class="border-bottom pb-2 mb-3">Inventory Information</h5>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="CurrentQuantity" class="form-label"></label>
                        <input asp-for="CurrentQuantity" class="form-control" type="number" step="0.01" min="0"
                            required />
                        <span asp-validation-for="CurrentQuantity" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MinimumQuantity" class="form-label"></label>
                        <input asp-for="MinimumQuantity" class="form-control" type="number" step="0.01" min="0"
                            required />
                        <span asp-validation-for="MinimumQuantity" class="text-danger"></span>
                        <small class="text-muted">Alert when stock falls below this level</small>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="OptimalQuantity" class="form-label"></label>
                        <input asp-for="OptimalQuantity" class="form-control" type="number" step="0.01" min="0" />
                        <small class="text-muted">Ideal quantity to maintain</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Unit" class="form-label"></label>
                        <select asp-for="Unit" class="form-select" required>
                            @if (ViewBag.Units is List<string> units)
                            {
                                @foreach (var unit in units)
                                {
                                    <option value="@unit" selected="@(Model.Unit == unit)">@unit</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StorageLocation" class="form-label"></label>
                        <input asp-for="StorageLocation" class="form-control" placeholder="e.g., Cabinet, Shelf 2" />
                    </div>

                    <!-- Purchase Information -->
                    <div class="col-12 mt-4">
                        <h5 class="border-bottom pb-2 mb-3">Purchase Information</h5>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PreferredVendor" class="form-label"></label>
                        <input asp-for="PreferredVendor" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ProductUrl" class="form-label"></label>
                        <input asp-for="ProductUrl" class="form-control" type="url" placeholder="https://" />
                        <small class="text-muted">Link to product for easy reordering</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastPurchasePrice" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="LastPurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastPurchaseDate" class="form-label"></label>
                        <input asp-for="LastPurchaseDate" class="form-control" type="date"
                            value="@Model.LastPurchaseDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <!-- Usage Tracking -->
                    <div class="col-12 mt-4">
                        <h5 class="border-bottom pb-2 mb-3">Usage & Expiration</h5>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AverageUsagePerWeek" class="form-label"></label>
                        <input asp-for="AverageUsagePerWeek" class="form-control" type="number" step="0.01" min="0" />
                        <small class="text-muted">For estimating when you'll run out</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ExpirationDate" class="form-label"></label>
                        <input asp-for="ExpirationDate" class="form-control" type="date"
                            value="@Model.ExpirationDate?.ToString("yyyy-MM-dd")" />
                    </div>

                    <!-- Additional Settings -->
                    <div class="col-12 mt-4">
                        <h5 class="border-bottom pb-2 mb-3">Settings & Notes</h5>
                    </div>

                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="EnableLowStockAlert" class="form-check-input" type="checkbox" />
                            <label asp-for="EnableLowStockAlert" class="form-check-label">
                                Enable Low Stock Alerts
                            </label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Active Item
                            </label>
                        </div>
                        <small class="text-muted">Uncheck to archive this supply</small>
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"
                            placeholder="Any additional notes about this supply..."></textarea>
                    </div>

                    <!-- Form Actions -->
                    <div class="col-12 mt-4">
                        <hr />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}