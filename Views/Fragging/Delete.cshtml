@model CoralFrag

@{
    ViewData["Title"] = $"Delete {Model.FragName}";
}

<div class="container py-4">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
        </h4>
        <p>Are you sure you want to delete this coral frag? This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-trash"></i> Delete Coral Frag</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Frag Name</dt>
                        <dd class="col-sm-8">@Model.FragName</dd>

                        @if (!string.IsNullOrEmpty(Model.CoralSpecies))
                        {
                            <dt class="col-sm-4">Species</dt>
                            <dd class="col-sm-8">@Model.CoralSpecies</dd>
                        }

                        <dt class="col-sm-4">Tank</dt>
                        <dd class="col-sm-8">@Model.Tank?.Name</dd>

                        @if (Model.ParentCoral != null)
                        {
                            <dt class="col-sm-4">Parent Coral</dt>
                            <dd class="col-sm-8">@Model.ParentCoral.Name</dd>
                        }

                        <dt class="col-sm-4">Frag Date</dt>
                        <dd class="col-sm-8">@Model.FragDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status switch {
                                "Growing" => "bg-success",
                                "Encrusted" => "bg-info",
                                "Ready" => "bg-primary",
                                "Sold" => "bg-warning",
                                "Traded" => "bg-secondary",
                                "Lost" => "bg-danger",
                                _ => "bg-secondary"
                            })">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Size</dt>
                        <dd class="col-sm-8">
                            @if (Model.CurrentSize.HasValue)
                            {
                                <text>@Model.CurrentSize.Value.ToString("F1") inches (started at @Model.InitialSize.ToString("F1")")</text>
                            }
                            else
                            {
                                <text>@Model.InitialSize.ToString("F1") inches</text>
                            }
                        </dd>

                        @if (Model.SalePrice.HasValue)
                        {
                            <dt class="col-sm-4">Sale Price</dt>
                            <dd class="col-sm-8">@Model.SalePrice.Value.ToString("C")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-4">Notes</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="mt-3">
                            <h6>Image (will also be deleted):</h6>
                            <img src="~/@Model.ImagePath" alt="@Model.FragName" class="img-thumbnail" style="max-width: 300px;" />
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" asp-route-tankId="@Model.TankId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Warning</h5>
                </div>
                <div class="card-body">
                    <p><strong>This action will permanently delete:</strong></p>
                    <ul>
                        <li>All frag information</li>
                        <li>Frag images (if any)</li>
                        <li>Growth tracking data</li>
                        <li>Sale information</li>
                    </ul>
                    <p class="mb-0 text-danger"><strong>This cannot be undone!</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>
