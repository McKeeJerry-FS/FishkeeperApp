@model IEnumerable<AquaHub.MVC.Models.ShoppingListItem>
@using AquaHub.MVC.Models.Enums

@{
    ViewData["Title"] = ViewBag.TankName != null ? $"Shopping List - {ViewBag.TankName}" : "Shopping List";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-cart-fill text-primary"></i>
            @if (ViewBag.TankName != null)
            {
                <text>Shopping List - @ViewBag.TankName</text>
            }
            else
            {
                <text>Shopping List</text>
            }
        </h1>
        <div>
            @if (ViewBag.TankId != null)
            {
                <a asp-action="Create" asp-route-tankId="@ViewBag.TankId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Item
                </a>
            }
            else
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Item
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    @{
        var totalItems = Model.Count();
        var pendingItems = Model.Count(i => !i.IsPurchased);
        var purchasedItems = Model.Count(i => i.IsPurchased);
        var totalCost = Model.Where(i => !i.IsPurchased && i.EstimatedCost.HasValue).Sum(i => i.EstimatedCost!.Value);
    }

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-list-ul"></i> Total Items</h6>
                    <h2 class="mb-0">@totalItems</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-cart"></i> Pending</h6>
                    <h2 class="mb-0">@pendingItems</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-check-circle"></i> Purchased</h6>
                    <h2 class="mb-0">@purchasedItems</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-currency-dollar"></i> Est. Cost</h6>
                    <h2 class="mb-0">$@totalCost.ToString("N2")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    @if (ViewBag.TankId == null && ViewBag.UserTanks != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Filter by Tank</label>
                        <select name="tankId" class="form-select" onchange="this.form.submit()">
                            <option value="">All Tanks</option>
                            @if (ViewBag.UserTanks is List<AquaHub.MVC.Models.Tank> tanks)
                            {
                                @foreach (var tank in tanks)
                                {
                                    <option value="@tank.Id">@tank.Name</option>
                                }
                            }
                        </select>
                    </div>
                </form>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted"></i>
                <h3 class="mt-3">No Shopping List Items</h3>
                <p class="text-muted">Start planning your tank by adding items to your shopping list!</p>
                @if (ViewBag.TankId != null)
                {
                    <a asp-action="Create" asp-route-tankId="@ViewBag.TankId" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Add Your First Item
                    </a>
                }
                else
                {
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Add Your First Item
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Pending Items -->
        var pendingItemsList = Model.Where(i => !i.IsPurchased).ToList();

        @if (pendingItemsList.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="bi bi-cart"></i> Items to Purchase (@pendingItemsList.Count())</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Priority</th>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Brand/Model</th>
                                    <th>Qty</th>
                                    <th>Est. Cost</th>
                                    <th>Tank</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in pendingItemsList)
                                {
                                    <tr>
                                        <td>
                                            @switch (item.Priority)
                                            {
                                                case 2:
                                                    <span class="badge bg-danger">High</span>
                                                    break;
                                                case 1:
                                                    <span class="badge bg-warning">Medium</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Low</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @switch (item.ItemType)
                                            {
                                                case ShoppingListItemType.Equipment:
                                                    <span class="badge bg-info"><i class="bi bi-gear"></i> Equipment</span>
                                                    break;
                                                case ShoppingListItemType.Supply:
                                                    <span class="badge bg-success"><i class="bi bi-box"></i> Supply</span>
                                                    break;
                                                case ShoppingListItemType.Livestock:
                                                    <span class="badge bg-primary"><i class="bi bi-fish"></i> Livestock</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Notes))
                                            {
                                                <br />

                                                <small class="text-muted">@item.Notes</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Brand))
                                            {
                                                <text>@item.Brand</text>
                                            }
                                            @if (!string.IsNullOrEmpty(item.ModelOrSpecies))
                                            {
                                                <br />

                                                <small class="text-muted">@item.ModelOrSpecies</small>
                                            }
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            @if (item.EstimatedCost.HasValue)
                                            {
                                                <text>$@item.EstimatedCost.Value.ToString("N2")</text>
                                            }
                                            else
                                            {
                                                <text>-</text>
                                            }
                                        </td>
                                        <td>@item.Tank?.Name</td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle"
                                                        data-bs-toggle="dropdown">
                                                    <i class="bi bi-plus-circle"></i> Add to
                                                </button>
                                                <ul class="dropdown-menu">
                                                    @if (item.ItemType == ShoppingListItemType.Supply)
                                                    {
                                                        <li>
                                                            <form asp-action="AddToSupplies" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-box"></i> Add to Supplies
                                                                </button>
                                                            </form>
                                                        </li>
                                                           <li>
                                                               <form asp-action="AddToSaltWater" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                   @Html.AntiForgeryToken()
                                                                   <button type="submit" class="dropdown-item">
                                                                       <i class="bi bi-droplet"></i> Record Saltwater Mixing
                                                                   </button>
                                                               </form>
                                                           </li>
                                                    }
                                                    @if (item.ItemType == ShoppingListItemType.Equipment)
                                                    {
                                                        <li>
                                                            <form asp-action="AddToEquipment" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-gear"></i> Add to Equipment
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form asp-action="AddToMaintenance" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                   <button type="submit" class="dropdown-item">
                                                                       <i class="bi bi-tools"></i> Log Maintenance Task
                                                                   </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form asp-action="AddToCO2" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-cloud"></i> Add to CO2 Cartridge Change
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                    @if (item.ItemType == ShoppingListItemType.Livestock)
                                                    {
                                                        <li>
                                                            <form asp-action="AddToLivestock" asp-route-id="@item.Id" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-fish"></i> Add to Livestock
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="MarkPurchased" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Mark as Purchased">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Purchased Items -->
        var purchasedItemsList = Model.Where(i => i.IsPurchased).ToList();

        @if (purchasedItemsList.Any())
        {
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check-circle"></i> Purchased Items (@purchasedItemsList.Count())</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Brand/Model</th>
                                    <th>Qty</th>
                                    <th>Cost</th>
                                    <th>Purchased On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in purchasedItemsList)
                                {
                                    <tr class="table-success">
                                        <td>
                                            @switch (item.ItemType)
                                            {
                                                case ShoppingListItemType.Equipment:
                                                    <span class="badge bg-info"><i class="bi bi-gear"></i> Equipment</span>
                                                    break;
                                                case ShoppingListItemType.Supply:
                                                    <span class="badge bg-success"><i class="bi bi-box"></i> Supply</span>
                                                    break;
                                                case ShoppingListItemType.Livestock:
                                                    <span class="badge bg-primary"><i class="bi bi-fish"></i> Livestock</span>
                                                    break;
                                            }
                                        </td>
                                        <td><strong>@item.Name</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Brand))
                                            {
                                                <text>@item.Brand</text>
                                            }
                                            @if (!string.IsNullOrEmpty(item.ModelOrSpecies))
                                            {
                                                <br />

                                                <small>@item.ModelOrSpecies</small>
                                            }
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            @if (item.EstimatedCost.HasValue)
                                            {
                                                <text>$@item.EstimatedCost.Value.ToString("N2")</text>
                                            }
                                            else
                                            {
                                                <text>-</text>
                                            }
                                        </td>
                                        <td>
                                            @if (item.DatePurchased.HasValue)
                                            {
                                                @item.DatePurchased.Value.ToString("MM/dd/yyyy")
                                            }
                                        </td>
                                        <td>
                                            @if (item.ItemType == ShoppingListItemType.Equipment)
                                            {
                                                <form asp-action="AddToEquipment" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-info" title="Add to Equipment">
                                                        <i class="bi bi-gear"></i> Add to Equipment
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Remove
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>