@model AquaHub.MVC.Models.AppUser
@{
    ViewData["Title"] = "My Profile";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="card" style="max-width: 500px;">
        <div class="card-body text-center">
            <img src="@(Model.AvatarUrl ?? "/images/default-avatar.png")" class="rounded-circle mb-3"
                 style="width: 96px; height: 96px; object-fit: cover;" alt="Avatar" />
            <h4>@Model.FullName</h4>
            <p class="text-muted">@Model.Email</p>
            @if (!string.IsNullOrWhiteSpace(Model.Bio))
            {
                <p class="mt-3">@Model.Bio</p>
            }
            @if (!string.IsNullOrWhiteSpace(Model.SocialLinks))
            {
                <div class="mt-2">
                    <strong>Social Links:</strong>
                    <ul class="list-unstyled">
                        @foreach (var link in Model.SocialLinks.Split(',', System.StringSplitOptions.RemoveEmptyEntries))
                        {
                            <li><a href="@link.Trim()" target="_blank">@link.Trim()</a></li>
                        }
                    </ul>
                </div>
            }
            <a class="btn btn-primary mt-2" asp-action="Edit">Edit Profile</a>
        </div>
    </div>
</div>