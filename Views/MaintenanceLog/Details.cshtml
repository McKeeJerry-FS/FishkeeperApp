@model AquaHub.MVC.Models.MaintenanceLog

@{
    ViewData["Title"] = "Maintenance Log Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-tools"></i> Maintenance Log - @Model.Timestamp.ToString("MMMM dd, yyyy")
                    </h3>
                </div>

                @* Maintenance Image *@
                <div class="text-center my-3">
                    @{
                        var maintenanceImage = ViewData["MaintenanceImage"] as string;
                        var displayImage = !string.IsNullOrEmpty(maintenanceImage) ? maintenanceImage :
                    Url.Content("~/img/maintenance_default.png");
                    }
                    <img src="@displayImage" alt="Maintenance Log Image"
                         style="width: 400px; height: 400px; object-fit: cover; border-radius: 8px;">
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="text-primary border-bottom pb-2">General Information</h5>
                            <dl class="row">
                                @if (Model.Tank != null)
                                {
                                    <dt class="col-sm-5">Tank:</dt>
                                    <dd class="col-sm-7 fw-bold">@Model.Tank.Name</dd>
                                }

                                <dt class="col-sm-5">Date & Time:</dt>
                                <dd class="col-sm-7">@Model.Timestamp.ToString("MMMM dd, yyyy h:mm tt")</dd>

                                <dt class="col-sm-5">Type:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-primary">@Model.Type.ToString()</span>
                                </dd>

                                @if (Model.WaterChangePercent.HasValue)
                                {
                                    <dt class="col-sm-5">Water Change:</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-info">@Model.WaterChangePercent.Value.ToString("F1")%</span>
                                    </dd>
                                }
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-success border-bottom pb-2">Supply Tracking</h5>
                            <dl class="row">
                                @if (Model.SupplyItem != null)
                                {
                                    <dt class="col-sm-5">Supply Item:</dt>
                                    <dd class="col-sm-7">@Model.SupplyItem.Name</dd>

                                    @if (Model.AmountUsed.HasValue)
                                    {
                                        <dt class="col-sm-5">Amount Used:</dt>
                                        <dd class="col-sm-7">
                                            @Model.AmountUsed.Value.ToString("F2")
                                            @if (!string.IsNullOrEmpty(Model.SupplyItem.Unit))
                                            {
                                                <span>@Model.SupplyItem.Unit</span>
                                            }
                                        </dd>
                                    }

                                    <dt class="col-sm-5">Current Stock:</dt>
                                    <dd class="col-sm-7">@Model.SupplyItem.CurrentQuantity.ToString("F2")
                                        @Model.SupplyItem.Unit</dd>
                                    }
                                else
                                    {
                                        <dd class="col-12 text-muted fst-italic">No supply item tracked</dd>
                                    }
                                </dl>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.Notes))
                            {
                                <div class="col-12">
                                    <h5 class="text-secondary border-bottom pb-2">Notes</h5>
                                    <div class="bg-light p-3 rounded">
                                        <p class="mb-0">@Model.Notes</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>