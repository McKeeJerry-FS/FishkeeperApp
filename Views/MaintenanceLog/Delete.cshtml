@model AquaHub.MVC.Models.MaintenanceLog

@{
    ViewData["Title"] = "Delete Maintenance Log";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Delete Maintenance Log
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle-fill"></i> Confirm Deletion
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this maintenance log record? This action cannot be undone.</p>
                    </div>

                    <dl class="row mt-4">
                        @if (Model.Tank != null)
                        {
                            <dt class="col-sm-4">Tank:</dt>
                            <dd class="col-sm-8 fw-bold">@Model.Tank.Name</dd>
                        }

                        <dt class="col-sm-4">Date:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Timestamp.ToString("MMMM dd, yyyy h:mm tt")</dd>

                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Type.ToString()</span>
                        </dd>

                        @if (Model.WaterChangePercent.HasValue)
                        {
                            <dt class="col-sm-4">Water Change:</dt>
                            <dd class="col-sm-8">@Model.WaterChangePercent.Value.ToString("F1")%</dd>
                        }

                        @if (Model.SupplyItem != null)
                        {
                            <dt class="col-sm-4">Supply Used:</dt>
                            <dd class="col-sm-8">@Model.SupplyItem.Name</dd>
                        }

                        @if (Model.AmountUsed.HasValue)
                        {
                            <dt class="col-sm-4">Amount Used:</dt>
                            <dd class="col-sm-8">@Model.AmountUsed.Value.ToString("F2")</dd>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.Notes))
                        {
                            <dt class="col-sm-4">Notes:</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
