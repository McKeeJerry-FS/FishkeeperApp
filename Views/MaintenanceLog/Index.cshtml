@model IEnumerable<MaintenanceLog>

@{
    ViewData["Title"] = "Maintenance Logs";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-wrench-adjustable text-success"></i> Maintenance Logs
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Log Maintenance
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-wrench display-1"></i>
            <h4 class="mt-3">No Maintenance Logs Found</h4>
            <p>Start tracking maintenance activities to keep your aquarium healthy.</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Log First Maintenance
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-calendar"></i> Date</th>
                                <th><i class="bi bi-droplet"></i> Tank</th>
                                <th><i class="bi bi-tag"></i> Type</th>
                                <th><i class="bi bi-water"></i> Water Change</th>
                                <th><i class="bi bi-chat-left-text"></i> Notes</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.OrderByDescending(m => m.Timestamp))
                            {
                                <tr>
                                    <td>@log.Timestamp.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-controller="Tank" asp-action="Details" asp-route-id="@log.TankId" class="text-decoration-none">
                                            @log.Tank?.Name
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(log.Type switch {
                                            AquaHub.MVC.Models.Enums.MaintenanceType.WaterChange => "primary",
                                            AquaHub.MVC.Models.Enums.MaintenanceType.FilterCleaning => "info",
                                            AquaHub.MVC.Models.Enums.MaintenanceType.GlassCleaning => "secondary",
                                            AquaHub.MVC.Models.Enums.MaintenanceType.TrimPlants => "success",
                                            AquaHub.MVC.Models.Enums.MaintenanceType.EquipmentMaintenance => "warning",
                                            _ => "dark"
                                        })">
                                            @log.Type
                                        </span>
                                    </td>
                                    <td>
                                        @if (log.WaterChangePercent.HasValue)
                                        {
                                            <span class="badge bg-info">@log.WaterChangePercent%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.Notes))
                                        {
                                            <span>@(log.Notes.Length > 50 ? log.Notes.Substring(0, 50) + "..." : log.Notes)</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@log.Id" class="btn btn-outline-primary" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@log.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@log.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row g-4 mt-3">
            <div class="col-md-3">
                <div class="card text-center bg-primary text-white">
                    <div class="card-body">
                        <i class="bi bi-wrench display-4"></i>
                        <h3 class="mt-2">@Model.Count()</h3>
                        <p class="mb-0">Total Logs</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-info text-white">
                    <div class="card-body">
                        <i class="bi bi-water display-4"></i>
                        <h3 class="mt-2">@Model.Count(m => m.Type == AquaHub.MVC.Models.Enums.MaintenanceType.WaterChange)</h3>
                        <p class="mb-0">Water Changes</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-success text-white">
                    <div class="card-body">
                        <i class="bi bi-calendar-week display-4"></i>
                        <h3 class="mt-2">@Model.Count(m => m.Timestamp >= DateTime.Now.AddDays(-7))</h3>
                        <p class="mb-0">This Week</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-warning text-white">
                    <div class="card-body">
                        <i class="bi bi-calendar-month display-4"></i>
                        <h3 class="mt-2">@Model.Count(m => m.Timestamp >= DateTime.Now.AddDays(-30))</h3>
                        <p class="mb-0">This Month</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
