@model GrowthRecord

@{
    ViewData["Title"] = "Add Growth Record";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-plus-circle text-primary"></i> Add Growth Record
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Growth Record Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="LivestockId" class="form-label">
                                <i class="bi bi-fish"></i> Livestock <span class="text-danger">*</span>
                            </label>
                            <select asp-for="LivestockId" class="form-select" asp-items="ViewBag.LivestockList">
                                <option value="">-- Select Livestock --</option>
                            </select>
                            <span asp-validation-for="LivestockId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MeasurementDate" class="form-label">
                                <i class="bi bi-calendar-event"></i> Record Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="MeasurementDate" type="date" class="form-control" />
                            <span asp-validation-for="MeasurementDate" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LengthInches" class="form-label">
                                    <i class="bi bi-rulers"></i> Length (inches)
                                </label>
                                <div class="input-group">
                                    <input asp-for="LengthInches" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text">"</span>
                                </div>
                                <span asp-validation-for="LengthInches" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="WeightGrams" class="form-label">
                                    <i class="bi bi-scale"></i> Weight (grams)
                                </label>
                                <div class="input-group">
                                    <input asp-for="WeightGrams" type="number" step="0.1" class="form-control" placeholder="0.0" />
                                    <span class="input-group-text">g</span>
                                </div>
                                <span asp-validation-for="WeightGrams" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HealthCondition" class="form-label">
                                    <i class="bi bi-heart-pulse"></i> Health Condition
                                </label>
                                <select asp-for="HealthCondition" class="form-select">
                                    <option value="">-- Select Condition --</option>
                                    <option value="Excellent">Excellent</option>
                                    <option value="Good">Good</option>
                                    <option value="Fair">Fair</option>
                                    <option value="Poor">Poor</option>
                                </select>
                                <span asp-validation-for="HealthCondition" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ColorVibrancy" class="form-label">
                                    <i class="bi bi-palette"></i> Color Quality
                                </label>
                                <select asp-for="ColorVibrancy" class="form-select">
                                    <option value="">-- Select Quality --</option>
                                    <option value="Vibrant">Vibrant</option>
                                    <option value="Normal">Normal</option>
                                    <option value="Faded">Faded</option>
                                    <option value="Dull">Dull</option>
                                </select>
                                <span asp-validation-for="ColorVibrancy" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                <i class="bi bi-chat-left-text"></i> Notes
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Observations, behavior, feeding, etc..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-info-circle"></i> Tracking Tips
                </div>
                <div class="card-body">
                    <h6>Measurement Guidelines</h6>
                    <p class="small mb-3">
                        Measure length from nose to tail tip. Weigh using a digital scale for accuracy.
                    </p>

                    <h6>Health Assessment</h6>
                    <p class="small mb-3">
                        <strong>Excellent:</strong> Active, vibrant colors, good appetite<br />
                        <strong>Good:</strong> Normal behavior, eating well<br />
                        <strong>Fair:</strong> Slightly lethargic, some fading<br />
                        <strong>Poor:</strong> Inactive, pale, not eating
                    </p>

                    <h6>Color Quality</h6>
                    <p class="small mb-0">
                        <strong>Vibrant:</strong> Bright, rich coloration<br />
                        <strong>Normal:</strong> Standard coloration<br />
                        <strong>Faded:</strong> Less intense colors<br />
                        <strong>Dull:</strong> Washed out, pale
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
