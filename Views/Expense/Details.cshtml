@model Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-receipt text-success"></i> Expense Details
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Expense Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-calendar-event"></i> Date
                            </h6>
                            <p class="fs-5">@Model.Date.ToString("MMMM d, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-cash"></i> Amount
                            </h6>
                            <p class="fs-4 text-success fw-bold">@Model.Amount.ToString("C")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-tag"></i> Category
                            </h6>
                            <p class="fs-5">
                                <span class="badge bg-info text-dark">@Model.Category</span>
                            </p>
                        </div>
                        @if (Model.TankId.HasValue && Model.Tank != null)
                        {
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-droplet"></i> Tank
                                </h6>
                                <p class="fs-5">
                                    <a asp-controller="Tank" asp-action="Details" asp-route-id="@Model.TankId"
                                           class="text-decoration-none">
                                        @Model.Tank.Name
                                    </a>
                                </p>
                            </div>
                        }
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-card-text"></i> Item Name
                            </h6>
                            <p class="fs-5">@Model.ItemName</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Brand))
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-bookmark"></i> Brand
                                </h6>
                                <p>@Model.Brand</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-box"></i> Quantity
                                </h6>
                                <p>@Model.Quantity</p>
                            </div>
                        </div>
                    }

                    @if (Model.UnitPrice.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-tag"></i> Unit Price
                                </h6>
                                <p>@Model.UnitPrice.Value.ToString("C")</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Vendor))
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-shop"></i> Vendor
                                </h6>
                                <p>@Model.Vendor</p>
                            </div>
                            @if (Model.PaymentMethod.HasValue)
                            {
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-1">
                                        <i class="bi bi-credit-card"></i> Payment Method
                                    </h6>
                                    <p>@Model.PaymentMethod</p>
                                </div>
                            }
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ReceiptNumber))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-receipt"></i> Receipt Number
                                </h6>
                                <p><code>@Model.ReceiptNumber</code></p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-journal-text"></i> Notes
                                </h6>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.IsRecurring)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i class="bi bi-arrow-repeat"></i> Recurring Expense
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">
                            <strong>Frequency:</strong> @Model.RecurrenceFrequency
                        </p>
                    </div>
                </div>
            }

            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Metadata
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2">
                        <strong>Created:</strong><br />
                        @Model.CreatedAt.ToString("MMM d, yyyy h:mm tt")
                    </p>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <p class="small mb-0">
                            <strong>Last Updated:</strong><br />
                            @Model.UpdatedAt.Value.ToString("MMM d, yyyy h:mm tt")
                        </p>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-trash"></i> Danger Zone
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-3">
                        Deleting this expense is permanent and cannot be undone.
                    </p>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm w-100">
                        <i class="bi bi-trash"></i> Delete Expense
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>