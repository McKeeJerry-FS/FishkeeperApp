@model IEnumerable<Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-cash-coin text-success"></i> Expenses
        </h1>
        <div>
            <a asp-action="Summary" class="btn btn-info me-2">
                <i class="bi bi-bar-chart"></i> Summary
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Expense
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-cash display-1"></i>
            <h4 class="mt-3">No Expenses Found</h4>
            <p>Start tracking your aquarium expenses to manage your budget.</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add First Expense
            </a>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card text-center bg-primary text-white">
                    <div class="card-body">
                        <i class="bi bi-cash-stack display-4"></i>
                        <h3 class="mt-2">@Model.Sum(e => e.Amount).ToString("C")</h3>
                        <p class="mb-0">Total Spent</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-success text-white">
                    <div class="card-body">
                        <i class="bi bi-calendar-month display-4"></i>
                        <h3 class="mt-2">@Model.Where(e => e.Date >= DateTime.Now.AddDays(-30)).Sum(e => e.Amount).ToString("C")</h3>
                        <p class="mb-0">This Month</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-info text-white">
                    <div class="card-body">
                        <i class="bi bi-receipt display-4"></i>
                        <h3 class="mt-2">@Model.Count()</h3>
                        <p class="mb-0">Total Expenses</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center bg-warning text-white">
                    <div class="card-body">
                        <i class="bi bi-graph-up display-4"></i>
                        <h3 class="mt-2">@(Model.Any() ? (Model.Sum(e => e.Amount) / Model.Select(e => e.TankId).Distinct().Count()).ToString("C") : "$0.00")</h3>
                        <p class="mb-0">Avg Per Tank</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Expense Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <i class="bi bi-list"></i> Expense History
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-calendar"></i> Date</th>
                                <th><i class="bi bi-droplet"></i> Tank</th>
                                <th><i class="bi bi-tag"></i> Category</th>
                                <th><i class="bi bi-card-text"></i> ItemName</th>
                                <th class="text-end"><i class="bi bi-cash"></i> Amount</th>
                                <th><i class="bi bi-credit-card"></i> Method</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var expense in Model.OrderByDescending(e => e.Date))
                            {
                                <tr>
                                    <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-controller="Tank" asp-action="Details" asp-route-id="@expense.TankId" class="text-decoration-none">
                                            @expense.Tank?.Name
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(expense.Category switch {
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Livestock => "primary",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.FoodAndSupplements => "success",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Equipment => "info",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Maintenance => "warning",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Medications => "danger",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Decorations => "secondary",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Plants => "success",
                                            AquaHub.MVC.Models.Enums.ExpenseCategory.Testing => "info",
                                            _ => "dark"
                                        })">
                                            @expense.Category
                                        </span>
                                    </td>
                                    <td>@expense.ItemName</td>
                                    <td class="text-end fw-bold">@expense.Amount.ToString("C")</td>
                                    <td>
                                        <small class="text-muted">@expense.PaymentMethod</small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@expense.Id" class="btn btn-outline-primary" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Total:</th>
                                <th class="text-end">@Model.Sum(e => e.Amount).ToString("C")</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
