@model AquaHub.MVC.Models.Tank

@{
    ViewData["Title"] = "Edit Tank";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil"></i> Edit Tank
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @if (Model.ImageData != null && Model.ImageData.Length > 0)
                        {
                            <input type="hidden" name="ImageData" value="@Convert.ToBase64String(Model.ImageData)" />
                            <input type="hidden" name="ImageType" value="@Model.ImageType" />
                        }
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label fw-bold"></label>
                                <select asp-for="Type" class="form-select"
                                        asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.AquariumType>()"></select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="VolumeGallons" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="VolumeGallons" class="form-control" type="number" step="0.1" />
                                    <span class="input-group-text">gal</span>
                                </div>
                                <span asp-validation-for="VolumeGallons" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageFile" class="form-label fw-bold">Tank Image</label>
                                <input asp-for="ImageFile" class="form-control" type="file"
                                       accept="image/jpeg,image/jpg,image/png,image/heic,image/heif,image/*"
                                       capture="environment" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                <small class="form-text text-muted">Take a new photo or upload to replace the current
                                    image
                                    (optional)</small>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Notes" class="form-label fw-bold"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Notes" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Quarantine Settings Section -->
                            <div class="card mt-4 border-warning">
                                <div class="card-header bg-warning bg-opacity-10">
                                    <h5 class="mb-0">
                                        <i class="bi bi-shield-fill-plus"></i> Quarantine Settings
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <div class="form-check form-switch">
                                                <input asp-for="IsQuarantineTank" class="form-check-input" type="checkbox"
                                                       id="isQuarantineTank" />
                                                <label class="form-check-label fw-bold" for="isQuarantineTank">
                                                    This is a Quarantine Tank
                                                </label>
                                            </div>
                                            <small class="form-text text-muted">Enable this to use quarantine-specific
                                                features and dashboard</small>
                                            </div>

                                            <div id="quarantineFields" style="display: none;">
                                                <div class="row g-3">
                                                    <div class="col-md-6">
                                                        <label asp-for="QuarantineStartDate" class="form-label fw-bold"></label>
                                                        <input asp-for="QuarantineStartDate" class="form-control" type="date" />
                                                        <span asp-validation-for="QuarantineStartDate"
                                                              class="text-danger small"></span>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label asp-for="QuarantineEndDate" class="form-label fw-bold"></label>
                                                        <input asp-for="QuarantineEndDate" class="form-control" type="date" />
                                                        <span asp-validation-for="QuarantineEndDate"
                                                              class="text-danger small"></span>
                                                        <small class="form-text text-muted">Optional - leave blank for ongoing
                                                            quarantine</small>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label asp-for="QuarantinePurpose" class="form-label fw-bold"></label>
                                                            <select asp-for="QuarantinePurpose" class="form-select">
                                                                <option value="">Select Purpose...</option>
                                                                <option value="Treatment">Treatment - Sick livestock</option>
                                                                <option value="Observation">Observation - New arrivals</option>
                                                                <option value="Acclimation">Acclimation - Stress reduction</option>
                                                                <option value="Disease Prevention">Disease Prevention</option>
                                                                <option value="Other">Other</option>
                                                            </select>
                                                            <span asp-validation-for="QuarantinePurpose"
                                                                  class="text-danger small"></span>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label asp-for="QuarantineStatus" class="form-label fw-bold"></label>
                                                            <select asp-for="QuarantineStatus" class="form-select">
                                                                <option value="">Select Status...</option>
                                                                <option value="Active">Active - Currently in quarantine</option>
                                                                <option value="Monitoring">Monitoring - Close observation</option>
                                                                <option value="Completed">Completed - Ready to reintroduce</option>
                                                            </select>
                                                            <span asp-validation-for="QuarantineStatus"
                                                                  class="text-danger small"></span>
                                                        </div>

                                                        <div class="col-12">
                                                            <label asp-for="TreatmentProtocol" class="form-label fw-bold"></label>
                                                            <textarea asp-for="TreatmentProtocol" class="form-control" rows="3"
                                                                      placeholder="e.g., Copper treatment 0.15-0.25 ppm for 21 days, daily water changes 10%"></textarea>
                                                            <span asp-validation-for="TreatmentProtocol"
                                                                  class="text-danger small"></span>
                                                            <small class="form-text text-muted">Describe the treatment plan or
                                                                observation protocol</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2 mt-4">
                                            <button type="submit" class="btn btn-warning px-4">
                                                <i class="bi bi-save"></i> Update Tank
                                            </button>
                                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4 ms-auto">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                    <script>
                                                // Show/hide quarantine fields based on checkbox
                                                const quarantineCheckbox = document.getElementById('isQuarantineTank');
                                                const quarantineFields = document.getElementById('quarantineFields');

                                                function toggleQuarantineFields() {
                                                    if (quarantineCheckbox.checked) {
                                                        quarantineFields.style.display = 'block';
                                                    } else {
                                                        quarantineFields.style.display = 'none';
                                                    }
                                                }

                                                // Initialize on page load
                                                toggleQuarantineFields();

                                                // Toggle on checkbox change
                                                quarantineCheckbox.addEventListener('change', toggleQuarantineFields);
                    </script>
                }