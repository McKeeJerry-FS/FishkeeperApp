    <!-- Current Water Quality Status -->
    @{
        var latestWaterTest = Model.RecentWaterTests.OrderByDescending(w => w.Timestamp).FirstOrDefault();
        var isSaltwater = Model.Tank.Type == AquaHub.MVC.Models.Enums.AquariumType.Saltwater ||
                          Model.Tank.Type == AquaHub.MVC.Models.Enums.AquariumType.Reef ||
                          Model.Tank.Type == AquaHub.MVC.Models.Enums.AquariumType.NanoReef;
    }

    @if (latestWaterTest != null)
    {
        var criticalParams = new List<(string Name, double? Value, double? MinIdeal, double? MaxIdeal, string Unit, string Icon, string Color)>
        {
            ("Ammonia", latestWaterTest.Ammonia, null, 0.0, "ppm", "bi-exclamation-octagon-fill", "danger"),
            ("Nitrite", latestWaterTest.Nitrite, null, 0.0, "ppm", "bi-exclamation-triangle-fill", "danger"),
            ("Nitrate", latestWaterTest.Nitrate, null, isSaltwater ? 20.0 : 40.0, "ppm", "bi-info-circle-fill", "warning"),
            ("pH", latestWaterTest.PH, isSaltwater ? 8.1 : 6.5, isSaltwater ? 8.4 : 7.5, "", "bi-droplet-half", "info"),
            ("Temperature", latestWaterTest.Temperature, isSaltwater ? 76.0 : 72.0, isSaltwater ? 82.0 : 78.0, "°F", "bi-thermometer-half", "primary")
        };

        var parametersWithValues = criticalParams.Where(p => p.Value.HasValue).ToList();
        var parametersInRange = parametersWithValues.Count(p => {
            if (!p.MinIdeal.HasValue && !p.MaxIdeal.HasValue) return true;
            if (!p.MinIdeal.HasValue) return p.Value <= p.MaxIdeal;
            if (!p.MaxIdeal.HasValue) return p.Value >= p.MinIdeal;
            return p.Value >= p.MinIdeal && p.Value <= p.MaxIdeal;
        });
        var totalParams = parametersWithValues.Count;
        var waterQualityPercentage = totalParams > 0 ? (parametersInRange * 100.0 / totalParams) : 0;
        var healthStatus = waterQualityPercentage >= 80 ? "Excellent" : waterQualityPercentage >= 60 ? "Good" : waterQualityPercentage >= 40 ? "Fair" : "Critical";
        var healthClass = waterQualityPercentage >= 80 ? "success" : waterQualityPercentage >= 60 ? "info" : waterQualityPercentage >= 40 ? "warning" : "danger";

        <div class="row mb-3">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <div class="row align-items-center">
                            <div class="col">
                                <h6 class="mb-0 fw-bold"><i class="bi bi-water text-primary"></i> Water Quality</h6>
                                <small class="text-muted">Last tested: @latestWaterTest.Timestamp.ToString("MMM dd, h:mm tt")</small>
                            </div>
                            <div class="col-auto">
                                <span class="badge bg-@healthClass">@healthStatus</span>
                                <small class="text-muted ms-2">@parametersInRange/@totalParams optimal</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <div class="row g-2">
                            @foreach (var param in parametersWithValues)
                            {
                                var value = param.Value!.Value;
                                var isInRange = true;
                                if (param.MinIdeal.HasValue && param.MaxIdeal.HasValue)
                                {
                                    isInRange = value >= param.MinIdeal.Value && value <= param.MaxIdeal.Value;
                                }
                                else if (param.MaxIdeal.HasValue)
                                {
                                    isInRange = value <= param.MaxIdeal.Value;
                                }
                                else if (param.MinIdeal.HasValue)
                                {
                                    isInRange = value >= param.MinIdeal.Value;
                                }

                                var gaugeColor = isInRange ? "success" : "danger";
                                var displayValue = param.Name == "pH" ? value.ToString("F2") : param.Name == "Temperature" ? value.ToString("F1") : value.ToString("F2");

                                <div class="col">
                                    <div class="card h-100 border-0 bg-light">
                                        <div class="card-body p-2 text-center">
                                            <div class="d-flex align-items-center justify-content-center mb-1">
                                                <div class="rounded-circle bg-white p-2 shadow-sm">
                                                    <i class="bi @param.Icon text-@gaugeColor" style="font-size: 1.25rem;"></i>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mb-1">@param.Name</small>
                                            <div class="fw-bold text-@gaugeColor" style="font-size: 1.25rem;">
                                                @displayValue<small class="text-muted" style="font-size: 0.7rem;">@param.Unit</small>
                                            </div>
                                            @if (param.MinIdeal.HasValue || param.MaxIdeal.HasValue)
                                            {
                                                <div class="progress mt-1" style="height: 4px;">
                                                    @{
                                                        double minR = param.MinIdeal ?? 0;
                                                        double maxR = param.MaxIdeal ?? (value * 1.5);
                                                        double rangeVal = maxR - minR;
                                                        double pos = rangeVal > 0 ? Math.Min(100, Math.Max(0, ((value - minR) / rangeVal * 100))) : 50;
                                                    }
                                                    <div class="progress-bar bg-@gaugeColor @(!isInRange ? "progress-bar-striped progress-bar-animated" : "")"
                                                         style="width: @pos.ToString("F0")%"></div>
                                                </div>
                                                <small class="text-muted" style="font-size: 0.65rem;">
                                                    @if (param.MinIdeal.HasValue && param.MaxIdeal.HasValue)
                                                    {
                                                        @:@param.MinIdeal.Value.ToString("F1")-@param.MaxIdeal.Value.ToString("F1")
                                                    }
                                                    else if (param.MaxIdeal.HasValue)
                                                    {
                                                        @:≤@param.MaxIdeal.Value.ToString("F1")
                                                    }
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top p-2">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="WaterTest" asp-action="Trends" asp-route-tankId="@Model.Tank.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-graph-up"></i> Trends
                            </a>
                            <a asp-controller="WaterTest" asp-action="Create" asp-route-tankId="@Model.Tank.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus"></i> New Test
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="bi bi-exclamation-triangle display-4"></i>
                    <h5 class="mt-3">No Water Test Data Available</h5>
                    <p class="mb-3">Start monitoring your tank's water quality by logging your first water test.</p>
                    <a asp-controller="WaterTest" asp-action="Create" asp-route-tankId="@Model.Tank.Id" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Log First Water Test
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Tank Milestones -->
    @if (Model.TankMilestones != null && Model.TankMilestones.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h6 class="mb-0 fw-bold"><i class="bi bi-flag text-success"></i> Tank Milestones</h6>
                    </div>
                    <div class="card-body p-3">
                        <ul class="list-group list-group-flush">
                            @foreach (var milestone in Model.TankMilestones)
                            {
                                var statusClass = milestone.IsCompleted ? "text-success" : (milestone.TargetDate < DateTime.UtcNow ? "text-danger" : "text-secondary");
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-flag-fill @statusClass me-2"></i>
                                        <span class="fw-bold">@milestone.Type</span>
                                        <span class="ms-2">@milestone.Description</span>
                                        @if (milestone.TargetDate.HasValue)
                                        {
                                            <span class="badge bg-light text-dark ms-2">Target: @milestone.TargetDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                        @if (milestone.IsCompleted && milestone.CompletedDate.HasValue)
                                        {
                                            <span class="badge bg-success ms-2">Completed: @milestone.CompletedDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                    </div>
                                    <div>
                                        @if (!milestone.IsCompleted)
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Done</span>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (Model.LatestJournalEntry != null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm border-start border-info border-4">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-journal-text text-info"></i> Latest Journal Entry
                            </h5>
                            <div>
                                <a asp-controller="Journal" asp-action="Index" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-journals"></i> View All
                                </a>
                                <a asp-controller="Journal" asp-action="Create" class="btn btn-sm btn-info">
                                    <i class="bi bi-plus-circle"></i> New Entry
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h4 class="mb-2">
                                    <i class="bi bi-card-heading text-primary"></i> @Model.LatestJournalEntry.Title
                                </h4>
                                <p class="text-muted mb-3">
                                    <i class="bi bi-calendar3"></i> 
                                    <strong>@Model.LatestJournalEntry.Timestamp.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")</strong>
                                </p>
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <p class="mb-0" style="white-space: pre-wrap;">
                                            @if (Model.LatestJournalEntry.Content.Length > 250)
                                            {
                                                @Model.LatestJournalEntry.Content.Substring(0, 250)<text>...</text>
                                                <br />
                                                <a asp-controller="Journal" asp-action="Details" asp-route-id="@Model.LatestJournalEntry.Id" class="btn btn-sm btn-outline-primary mt-2">
                                                    <i class="bi bi-arrow-right"></i> Read More
                                                </a>
                                            }
                                            else
                                            {
                                                @Model.LatestJournalEntry.Content
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    @if (!string.IsNullOrEmpty(Model.LatestJournalEntry.ImagePath))
                                    {
                                        <img src="@Model.LatestJournalEntry.ImagePath" alt="Journal Entry" class="img-fluid rounded shadow mb-3" style="max-height: 200px;">
                                    }
                                    else
