                                        <div class="bg-light rounded p-4 mb-3">
                                            <i class="bi bi-journal-bookmark-fill text-muted" style="font-size: 4rem;"></i>
                                        </div>
                                    }
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Journal" asp-action="Details" asp-route-id="@Model.LatestJournalEntry.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i> View Full Entry
                                        </a>
                                        <a asp-controller="Journal" asp-action="Edit" asp-route-id="@Model.LatestJournalEntry.Id" class="btn btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit Entry
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Call to Action for First Journal Entry -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm border-start border-success border-4">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-journal-plus text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 mb-2">Start Your Tank Journal</h5>
                        <p class="text-muted mb-3">
                            Document observations, milestones, and important events for this tank.
                        </p>
                        <a asp-controller="Journal" asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Create First Entry
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Water Tests</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentWaterTests.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var test in Model.RecentWaterTests.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@test.Timestamp.ToString("MMM dd, yyyy")</h6>
                                            <small class="text-muted">
                                                @if (test.PH.HasValue) { <span class="me-2">pH: @test.PH.Value.ToString("F1")</span> }
                                                @if (test.Temperature.HasValue) { <span class="me-2">Temp: @test.Temperature.Value.ToString("F1")°F</span> }
                                            </small>
                                        </div>
                                        <a asp-controller="WaterTest" asp-action="Details" asp-route-id="@test.Id" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No water tests recorded yet.</p>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="WaterTest" asp-action="Create" asp-route-tankId="@Model.Tank.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Log Water Test
                    </a>
                    <a asp-controller="WaterTest" asp-action="Trends" asp-route-tankId="@Model.Tank.Id" class="btn btn-outline-secondary btn-sm float-end">
                        View Trends
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Maintenance -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-wrench"></i> Recent Maintenance</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentMaintenance.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var log in Model.RecentMaintenance.Take(5))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@log.Type</h6>
                                            <small class="text-muted">@log.Timestamp.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <a asp-controller="MaintenanceLog" asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No maintenance logs recorded yet.</p>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="MaintenanceLog" asp-action="Create" asp-route-tankId="@Model.Tank.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Log Maintenance
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
