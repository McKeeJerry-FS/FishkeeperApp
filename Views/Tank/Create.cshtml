<!-- DEBUG: ModelState output for troubleshooting -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning">
        <strong>DEBUG: ModelState is invalid.</strong>
        <ul>
            @foreach (var entry in ViewData.ModelState)
            {
                foreach (var error in entry.Value.Errors)
                {
                    <li><strong>@entry.Key</strong>: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
<!-- Feedback Messages -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@model AquaHub.MVC.Models.Tank

@{
    ViewData["Title"] = "Add New Tank";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Add New Tank
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="IsNewTank" class="form-label fw-bold">Is this a new tank?</label>
                                <select asp-for="IsNewTank" class="form-select">
                                    <option value="true">New (Cycling)</option>
                                    <option value="false">Established</option>
                                </select>
                                <span asp-validation-for="IsNewTank" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Living Room Reef" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label fw-bold"></label>
                                <select asp-for="Type" class="form-select"
                                        asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.AquariumType>()">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="VolumeGallons" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="VolumeGallons" class="form-control" type="number" step="0.1" />
                                    <span class="input-group-text">gal</span>
                                </div>
                                <span asp-validation-for="VolumeGallons" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageFile" class="form-label fw-bold">Tank Image</label>
                                <input asp-for="ImageFile" class="form-control" type="file"
                                       accept="image/jpeg,image/jpg,image/png,image/heic,image/heif,image/*"
                                       capture="environment" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                <small class="form-text text-muted">Take a photo or upload an image of your tank
                                    (optional)</small>
                                    <div id="imagePreviewContainer" class="mt-3" style="display:none;">
                                        <label class="form-label">Preview &amp; Adjust:</label>
                                        <div style="max-width:300px;">
                                            <canvas id="imagePreviewCanvas"
                                                    style="width:100%;border:1px solid #ccc;border-radius:8px;"></canvas>
                                        </div>
                                        <div class="mt-2">
                                            <label>Zoom:</label>
                                            <input type="range" id="imageZoom" min="1" max="3" step="0.01" value="1"
                                                   style="width:150px;">
                                            <label>Position:</label>
                                            <input type="range" id="imageX" min="-150" max="150" step="1" value="0"
                                                   style="width:100px;">
                                            <input type="range" id="imageY" min="-150" max="150" step="1" value="0"
                                                   style="width:100px;">
                                        </div>
                                    </div>
                                </div>
                                <script>
                                                                                                        const imageInput = document.getElementById('imageInput');
                                                                                                        const previewContainer = document.getElementById('imagePreviewContainer');
                                                                                                        const previewCanvas = document.getElementById('imagePreviewCanvas');
                                                                                                        const zoomInput = document.getElementById('imageZoom');
                                                                                                        const xInput = document.getElementById('imageX');
                                                                                                        const yInput = document.getElementById('imageY');
                                                                                                        let img = null;
                                                                                                        let imgLoaded = false;
                                                                                                        imageInput.addEventListener('change', function (e) {
                                                                                                            const file = e.target.files[0];
                                                                                                            if (!file) return;
                                                                                                            const reader = new FileReader();
                                                                                                            reader.onload = function (ev) {
                                                                                                                img = new window.Image();
                                                                                                                img.onload = function () {
                                                                                                                    imgLoaded = true;
                                                                                                                    previewContainer.style.display = 'block';
                                                                                                                    // Calculate fit-to-canvas zoom
                                                                                                                    const canvasWidth = 300;
                                                                                                                    const canvasHeight = 200;
                                                                                                                    const imgRatio = img.width / img.height;
                                                                                                                    const canvasRatio = canvasWidth / canvasHeight;
                                                                                                                    let fitZoom = 1;
                                                                                                                    if (imgRatio > canvasRatio) {
                                                                                                                        fitZoom = canvasWidth / img.width;
                                                                                                                    } else {
                                                                                                                        fitZoom = canvasHeight / img.height;
                                                                                                                    }
                                                                                                                    zoomInput.value = fitZoom;
                                                                                                                    xInput.value = 0;
                                                                                                                    yInput.value = 0;
                                                                                                                    drawImage();
                                                                                                                };
                                                                                                                img.src = ev.target.result;
                                                                                                            };
                                                                                                            reader.readAsDataURL(file);
                                                                                                        });
                                                                                                        function drawImage() {
                                                                                                            if (!imgLoaded) return;
                                                                                                            const ctx = previewCanvas.getContext('2d');
                                                                                                            const zoom = parseFloat(zoomInput.value);
                                                                                                            const x = parseInt(xInput.value);
                                                                                                            const y = parseInt(yInput.value);
                                                                                                            previewCanvas.width = 300;
                                                                                                            previewCanvas.height = 200;
                                                                                                            ctx.clearRect(0, 0, previewCanvas.width, previewCanvas.height);
                                                                                                            ctx.save();
                                                                                                            ctx.translate(previewCanvas.width / 2 + x, previewCanvas.height / 2 + y);
                                                                                                            ctx.scale(zoom, zoom);
                                                                                                            ctx.drawImage(img, -img.width / 2, -img.height / 2);
                                                                                                            ctx.restore();
                                                                                                        }
                                                                                                        zoomInput.addEventListener('input', drawImage);
                                                                                                        xInput.addEventListener('input', drawImage);
                                                                                                        yInput.addEventListener('input', drawImage);
                                </script>
                                }

                                <div class="col-12">
                                    <label asp-for="Notes" class="form-label fw-bold"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="4"
                                              placeholder="Add any notes about your tank setup..."></textarea>
                                    <span asp-validation-for="Notes" class="text-danger small"></span>
                                </div>

                                <!-- Quarantine Settings -->
                                <div class="col-12 mt-3">
                                    <div class="card bg-warning-subtle border-warning">
                                        <div class="card-header bg-warning bg-opacity-25">
                                            <h5 class="mb-0">
                                                <i class="bi bi-shield-exclamation"></i> Quarantine Settings
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="form-check mb-3">
                                                <input asp-for="IsQuarantineTank" class="form-check-input" type="checkbox"
                                                       id="isQuarantineTank" />
                                                <label class="form-check-label fw-bold" for="isQuarantineTank">
                                                    This is a Quarantine Tank
                                                </label>
                                                <small class="form-text text-muted d-block mt-1">
                                                    Enable AI-powered monitoring and care recommendations for sick or new
                                                    livestock
                                                </small>
                                            </div>

                                            <div id="quarantineFields" style="display: none;">
                                                <div class="row g-3">
                                                    <div class="col-md-6">
                                                        <label asp-for="QuarantineStartDate"
                                                               class="form-label fw-bold"></label>
                                                        <input asp-for="QuarantineStartDate" class="form-control"
                                                               type="date" />
                                                        <span asp-validation-for="QuarantineStartDate"
                                                              class="text-danger small"></span>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label asp-for="QuarantineEndDate"
                                                               class="form-label fw-bold"></label>
                                                        <input asp-for="QuarantineEndDate" class="form-control"
                                                               type="date" />
                                                        <span asp-validation-for="QuarantineEndDate"
                                                              class="text-danger small"></span>
                                                        <small class="form-text text-muted">Expected or actual end
                                                            date</small>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label asp-for="QuarantinePurpose"
                                                                   class="form-label fw-bold"></label>
                                                            <select asp-for="QuarantinePurpose" class="form-select">
                                                                <option value="">-- Select Purpose --</option>
                                                                <option value="Treatment">Treatment - Treating sick fish
                                                                </option>
                                                                <option value="Observation">Observation - Monitoring new
                                                                    arrivals</option>
                                                                    <option value="Acclimation">Acclimation - Gradual adjustment
                                                                    </option>
                                                                    <option value="Prophylaxis">Prophylaxis - Preventive care
                                                                    </option>
                                                                    <option value="Recovery">Recovery - Post-treatment recovery
                                                                    </option>
                                                                </select>
                                                                <span asp-validation-for="QuarantinePurpose"
                                                                      class="text-danger small"></span>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label asp-for="QuarantineStatus"
                                                                       class="form-label fw-bold"></label>
                                                                <select asp-for="QuarantineStatus" class="form-select">
                                                                    <option value="">-- Select Status --</option>
                                                                    <option value="Active" selected>Active - Currently in quarantine
                                                                    </option>
                                                                    <option value="Monitoring">Monitoring - Close observation
                                                                    </option>
                                                                    <option value="Completed">Completed - Ready to reintroduce
                                                                    </option>
                                                                </select>
                                                                <span asp-validation-for="QuarantineStatus"
                                                                      class="text-danger small"></span>
                                                            </div>

                                                            <div class="col-12">
                                                                <label asp-for="TreatmentProtocol"
                                                                       class="form-label fw-bold"></label>
                                                                <textarea asp-for="TreatmentProtocol" class="form-control" rows="3"
                                                                          placeholder="e.g., Copper treatment 0.15-0.25 ppm for 21 days, daily water changes 10%"></textarea>
                                                                <span asp-validation-for="TreatmentProtocol"
                                                                      class="text-danger small"></span>
                                                                <small class="form-text text-muted">Describe the treatment plan or
                                                                    observation protocol</small>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2 mt-4">
                                            <button type="submit" class="btn btn-primary px-4">
                                                <i class="bi bi-save"></i> Save Tank
                                            </button>
                                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                    <script>
                                                                                                            // Show/hide quarantine fields based on checkbox
                                                                                                            const quarantineCheckbox = document.getElementById('isQuarantineTank');
                                                                                                            const quarantineFields = document.getElementById('quarantineFields');

                                                                                                            function toggleQuarantineFields() {
                                                                                                                if (quarantineCheckbox.checked) {
                                                                                                                    quarantineFields.style.display = 'block';
                                                                                                                } else {
                                                                                                                    quarantineFields.style.display = 'none';
                                                                                                                }
                                                                                                            }

                                                                                                            // Initialize on page load
                                                                                                            toggleQuarantineFields();

                                                                                                            // Toggle on checkbox change
                                                                                                            quarantineCheckbox.addEventListener('change', toggleQuarantineFields);
                    </script>
                }