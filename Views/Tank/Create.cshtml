@model AquaHub.MVC.Models.Tank

@{
    ViewData["Title"] = "Add New Tank";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Add New Tank
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold"></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Living Room Reef" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label fw-bold"></label>
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.AquariumType>()">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="VolumeGallons" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <input asp-for="VolumeGallons" class="form-control" type="number" step="0.1" />
                                    <span class="input-group-text">gal</span>
                                </div>
                                <span asp-validation-for="VolumeGallons" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ImageFile" class="form-label fw-bold">Tank Image</label>
                                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                <small class="form-text text-muted">Upload a photo of your tank (optional)</small>
                            </div>

                            <div class="col-12">
                                <label asp-for="Notes" class="form-label fw-bold"></label>
                                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Add any notes about your tank setup..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Save Tank
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
