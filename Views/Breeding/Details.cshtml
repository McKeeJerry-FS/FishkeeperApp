@model AquaHub.MVC.Models.BreedingPair

@{
    ViewData["Title"] = "Breeding Pair Details";
    var totalAttempts = Model.BreedingAttempts?.Count ?? 0;
    var successfulAttempts = Model.BreedingAttempts?.Count(a => a.Status == "Successful") ?? 0;
    var successRate = totalAttempts > 0 ? (successfulAttempts * 100.0 / totalAttempts) : 0;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-hearts text-danger"></i>
                @Model.Parent1?.Name & @Model.Parent2?.Name
            </h1>
            <p class="text-muted">
                <i class="bi bi-building"></i> @Model.Tank?.Name
                @if (Model.IsActive)
                {
                    <span class="badge bg-success ms-2">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary ms-2">Inactive</span>
                }
            </p>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="WaterConditions" asp-route-id="@Model.Id" class="btn btn-lg btn-outline-primary w-100">
                                <i class="bi bi-droplet-half fs-3 d-block mb-2"></i>
                                <strong>Water Conditions</strong>
                                <p class="mb-0 small text-muted">Monitor breeding parameters</p>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="AddAttempt" asp-route-pairId="@Model.Id" class="btn btn-lg btn-outline-success w-100">
                                <i class="bi bi-plus-circle fs-3 d-block mb-2"></i>
                                <strong>Log Breeding Attempt</strong>
                                <p class="mb-0 small text-muted">Record spawning event</p>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="WaterTest" asp-action="Create" asp-route-tankId="@Model.TankId" class="btn btn-lg btn-outline-info w-100">
                                <i class="bi bi-droplet fs-3 d-block mb-2"></i>
                                <strong>Test Water</strong>
                                <p class="mb-0 small text-muted">Check current parameters</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column -->
        <div class="col-md-8">
            <!-- Pair Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Breeding Pair Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted small">Parent 1</label>
                            <p class="mb-0">
                                <a asp-controller="Livestock" asp-action="Details" asp-route-id="@Model.Parent1Id" class="text-decoration-none">
                                    @Model.Parent1?.Name
                                    <i class="bi bi-box-arrow-up-right ms-1"></i>
                                </a>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted small">Parent 2</label>
                            <p class="mb-0">
                                <a asp-controller="Livestock" asp-action="Details" asp-route-id="@Model.Parent2Id" class="text-decoration-none">
                                    @Model.Parent2?.Name
                                    <i class="bi bi-box-arrow-up-right ms-1"></i>
                                </a>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted small">Date Paired</label>
                            <p class="mb-0">@Model.DatePaired.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted small">Status</label>
                            <p class="mb-0">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.BehaviorNotes))
                        {
                            <div class="col-12 mb-3">
                                <label class="fw-bold text-muted small">Behavior Notes</label>
                                <p class="mb-0">@Model.BehaviorNotes</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.WaterConditions))
                        {
                            <div class="col-12 mb-3">
                                <label class="fw-bold text-muted small">Water Conditions Notes</label>
                                <p class="mb-0">@Model.WaterConditions</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Breeding Setup -->
            @if (!string.IsNullOrEmpty(Model.BreedingSetup))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-gear"></i> Breeding Setup</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.BreedingSetup</p>
                    </div>
                </div>
            }

            <!-- Breeding Attempts -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clipboard-check"></i> Breeding Attempts</h5>
                    <a asp-action="AddAttempt" asp-route-pairId="@Model.Id" class="btn btn-sm btn-light">
                        <i class="bi bi-plus-circle"></i> Add Attempt
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.BreedingAttempts?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Eggs Laid</th>
                                        <th>Hatched</th>
                                        <th>Offspring</th>
                                        <th>Survival Rate</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attempt in Model.BreedingAttempts.OrderByDescending(a => a.SpawningDateTime))
                                    {
                                        <tr>
                                            <td>@attempt.SpawningDateTime?.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                @switch (attempt.Status)
                                                {
                                                    case "Successful":
                                                        <span class="badge bg-success">@attempt.Status</span>
                                                        break;
                                                    case "Failed":
                                                        <span class="badge bg-danger">@attempt.Status</span>
                                                        break;
                                                    case "In Progress":
                                                        <span class="badge bg-primary">@attempt.Status</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@attempt.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@(attempt.EggsLaid?.ToString() ?? "-")</td>
                                            <td>@(attempt.NumberHatched?.ToString() ?? "-")</td>
                                            <td>@(attempt.OffspringCount?.ToString() ?? "-")</td>
                                            <td>
                                                @if (attempt.SurvivalRatePercent.HasValue)
                                                {
                                                    <span class="badge @(attempt.SurvivalRatePercent >= 70 ? "bg-success" : attempt.SurvivalRatePercent >= 40 ? "bg-warning" : "bg-danger")">
                                                        @attempt.SurvivalRatePercent.Value.ToString("F1")%
                                                    </span>
                                                }
                                                else
                                                {
                                                    <text>-</text>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="EditAttempt" asp-route-id="@attempt.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-clipboard display-3 text-muted"></i>
                            <p class="text-muted mt-2">No breeding attempts recorded yet.</p>
                            <a asp-action="AddAttempt" asp-route-pairId="@Model.Id" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Log First Attempt
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
            <!-- Image -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-0">
                        <img src="@Model.ImagePath" alt="Breeding Pair" class="img-fluid rounded" />
                    </div>
                </div>
            }

            <!-- Statistics -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="mb-0">@totalAttempts</h3>
                                <small class="text-muted">Total Attempts</small>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="mb-0">@successfulAttempts</h3>
                                <small class="text-muted">Successful</small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="p-3 @(successRate >= 50 ? "bg-success" : successRate > 0 ? "bg-warning" : "bg-light") text-@(successRate >= 50 ? "white" : "dark") rounded">
                                <h3 class="mb-0">@successRate.ToString("F1")%</h3>
                                <small>Success Rate</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Pair
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete Pair
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
