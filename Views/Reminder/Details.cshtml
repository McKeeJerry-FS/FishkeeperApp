@model Reminder

@{
    ViewData["Title"] = "Reminder Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-bell"></i> Reminder Details
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Model.Title</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">
                            <i class="bi bi-tag"></i> Type
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Type</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-event"></i> Due Date
                        </dt>
                        <dd class="col-sm-8">
                            @Model.NextDueDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                            @if (Model.NextDueDate < DateTime.Now && !Model.LastCompletedDate.HasValue)
                            {
                                <span class="badge bg-danger ms-2">Overdue</span>
                            }
                            else if (!Model.LastCompletedDate.HasValue)
                            {
                                <span class="badge bg-success ms-2">Upcoming</span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-repeat"></i> Frequency
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Frequency</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-check-circle"></i> Status
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.LastCompletedDate.HasValue)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Completed
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-clock"></i> Pending
                                </span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-text-paragraph"></i> Description
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Description
                            </dd>
                        }

                        @if (Model.Tank != null)
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-droplet"></i> Associated Tank
                            </dt>
                            <dd class="col-sm-8">
                                <a asp-controller="Tank" asp-action="Details" asp-route-id="@Model.TankId"
                                    class="text-decoration-none">
                                    @Model.Tank.Name
                                </a>
                            </dd>
                        }

                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-plus"></i> Created
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("MMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-check"></i> Last Modified
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-gear"></i> Quick Actions
                </div>
                <div class="list-group list-group-flush">
                    @if (!Model.LastCompletedDate.HasValue)
                    {
                        <form asp-action="Complete" asp-route-id="@Model.Id" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="list-group-item list-group-item-action text-success">
                                <i class="bi bi-check-circle"></i> Mark as Complete
                            </button>
                        </form>
                    }
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="list-group-item list-group-item-action">
                        <i class="bi bi-pencil"></i> Edit Reminder
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                        class="list-group-item list-group-item-action text-danger">
                        <i class="bi bi-trash"></i> Delete Reminder
                    </a>
                </div>
            </div>

            @if (Model.Frequency != AquaHub.MVC.Models.Enums.ReminderFrequency.Once)
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-info-circle"></i> Recurrence Info
                    </div>
                    <div class="card-body">
                        <p class="mb-1"><strong>Frequency:</strong> @Model.Frequency</p>
                        <p class="text-muted small mb-0">
                            This reminder will recur @Model.Frequency.ToString().ToLower().
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>