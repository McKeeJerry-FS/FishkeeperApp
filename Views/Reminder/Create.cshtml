@model AquaHub.MVC.Models.Reminder

@{
    ViewData["Title"] = "Create Reminder";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Create Reminder
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Title" class="form-label fw-bold"></label>
                                <input asp-for="Title" class="form-control" placeholder="e.g., Weekly Water Change" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-bold"></label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add details about this task..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label fw-bold"></label>
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.ReminderType>()">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Frequency" class="form-label fw-bold"></label>
                                <select asp-for="Frequency" class="form-select" asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.ReminderFrequency>()">
                                    <option value="">-- Select Frequency --</option>
                                </select>
                                <span asp-validation-for="Frequency" class="text-danger small"></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="NextDueDate" class="form-label fw-bold"></label>
                                <input asp-for="NextDueDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="NextDueDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold d-block">&nbsp;</label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Save Reminder
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
