@model Reminder

@{
    ViewData["Title"] = "Edit Reminder";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-pencil"></i> Edit Reminder
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Reminder Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="bi bi-card-heading"></i> Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Weekly water change" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Additional details about this reminder..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Type" class="form-label">
                                    <i class="bi bi-tag"></i> Type <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.ReminderType>()">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Frequency" class="form-label">
                                    <i class="bi bi-repeat"></i> Frequency <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Frequency" class="form-select" asp-items="Html.GetEnumSelectList<AquaHub.MVC.Models.Enums.ReminderFrequency>()">
                                    <option value="">-- Select Frequency --</option>
                                </select>
                                <span asp-validation-for="Frequency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NextDueDate" class="form-label">
                                <i class="bi bi-calendar-event"></i> Due Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NextDueDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="NextDueDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TankId" class="form-label">
                                <i class="bi bi-droplet"></i> Associated Tank
                            </label>
                            <select asp-for="TankId" class="form-select" asp-items="ViewBag.TankList">
                                <option value="">-- Select Tank (Optional) --</option>
                            </select>
                            <span asp-validation-for="TankId" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Active
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm bg-light">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-info-circle"></i> Help
                </div>
                <div class="card-body">
                    <h6>Reminder Types</h6>
                    <ul class="small mb-3">
                        <li><strong>WaterChange:</strong> Schedule regular water changes</li>
                        <li><strong>Feeding:</strong> Feeding time reminders</li>
                        <li><strong>Testing:</strong> Water parameter testing</li>
                        <li><strong>Maintenance:</strong> Equipment maintenance</li>
                        <li><strong>Medication:</strong> Treatment schedules</li>
                        <li><strong>Other:</strong> Custom reminders</li>
                    </ul>

                    <h6>Frequency Options</h6>
                    <ul class="small mb-0">
                        <li><strong>Once:</strong> One-time reminder</li>
                        <li><strong>Daily:</strong> Repeats every day</li>
                        <li><strong>Weekly:</strong> Repeats every week</li>
                        <li><strong>BiWeekly:</strong> Every 2 weeks</li>
                        <li><strong>Monthly:</strong> Once per month</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
