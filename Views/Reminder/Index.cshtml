@model IEnumerable<AquaHub.MVC.Models.Reminder>

@{
    ViewData["Title"] = "Reminders";
    var filter = ViewBag.CurrentFilter ?? "all";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-bell-fill text-warning"></i> Reminders
            </h1>
            <p class="text-muted">Manage your aquarium maintenance tasks</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> New Reminder
            </a>
        </div>
    </div>

    <!-- Filter Tabs -->
    <ul class="nav nav-pills mb-4">
        <li class="nav-item">
            <a class="nav-link @(filter == "all" ? "active" : "")" asp-action="Index" asp-route-filter="all">
                All
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(filter == "active" ? "active" : "")" asp-action="Index" asp-route-filter="active">
                <i class="bi bi-check-circle"></i> Active
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(filter == "upcoming" ? "active" : "")" asp-action="Index" asp-route-filter="upcoming">
                <i class="bi bi-calendar-event"></i> Upcoming
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(filter == "overdue" ? "active" : "")" asp-action="Index" asp-route-filter="overdue">
                <i class="bi bi-exclamation-circle text-danger"></i> Overdue
            </a>
        </li>
    </ul>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-bell-slash display-1 text-muted"></i>
                <h3 class="mt-3">No Reminders</h3>
                <p class="text-muted">Create reminders to stay on top of maintenance</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Reminder
                    </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var reminder in Model.OrderBy(r => r.NextDueDate))
            {
                var isOverdue = reminder.NextDueDate < DateTime.Now && reminder.IsActive;
                var cardClass = isOverdue ? "border-danger" : "";
                
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm @cardClass">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold mb-0">@reminder.Title</h5>
                                @if (reminder.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>

                            <p class="text-muted small mb-2">
                                <i class="bi bi-tag"></i> @reminder.Type
                            </p>

                            @if (!string.IsNullOrEmpty(reminder.Description))
                            {
                                <p class="card-text small">@reminder.Description</p>
                            }

                            <div class="mt-3 pt-3 border-top">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">Due:</small>
                                        <p class="mb-0 @(isOverdue ? "text-danger fw-bold" : "")">
                                            @reminder.NextDueDate.ToString("MMM dd, yyyy")
                                        </p>
                                    </div>
                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Overdue
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@reminder.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                @if (reminder.IsActive)
                                {
                                    <form asp-action="Complete" asp-route-id="@reminder.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check2"></i> Complete
                                        </button>
                                    </form>
                                }
                                <a asp-action="Edit" asp-route-id="@reminder.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
