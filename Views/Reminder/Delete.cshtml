@model Reminder

@{
    ViewData["Title"] = "Delete Reminder";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-danger">
            <i class="bi bi-trash"></i> Delete Reminder
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Warning:</strong> Are you sure you want to delete this reminder? This action cannot be undone.
            </div>

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Reminder to Delete</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">
                            <i class="bi bi-card-heading"></i> Title
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Title
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-tag"></i> Type
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Type</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-calendar-event"></i> Due Date
                        </dt>
                        <dd class="col-sm-8">
                            @Model.NextDueDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-repeat"></i> Frequency
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Frequency</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-check-circle"></i> Status
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.LastCompletedDate.HasValue)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-text-paragraph"></i> Description
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Description
                            </dd>
                        }

                        @if (Model.Tank != null)
                        {
                            <dt class="col-sm-4">
                                <i class="bi bi-droplet"></i> Tank
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Tank.Name
                            </dd>
                        }
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> No, Keep It
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete Reminder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>