@model AquaHub.MVC.Models.Livestock

@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Livestock</a></li>
                    <li class="breadcrumb-item active">@Model.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="mb-3 text-center">
                            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow"
                                 style="max-height: 300px; object-fit: contain;" />
                        </div>
                    }
                    <h2 class="card-title display-6 fw-bold mb-3">@Model.Name</h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Species:</dt>
                        <dd class="col-sm-9">@Model.Species</dd>

                        <dt class="col-sm-3">Date Added:</dt>
                        <dd class="col-sm-9">@Model.AddedOn.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Time in Tank:</dt>
                        <dd class="col-sm-9">@((DateTime.Now - Model.AddedOn).Days) days</dd>

                        @if (Model is AquaHub.MVC.Models.FreshwaterFish fwFish)
                        {
                            <dt class="col-sm-3">Adult Size:</dt>
                            <dd class="col-sm-9">@fwFish.AdultSize in</dd>
                            <dt class="col-sm-3">Coloration:</dt>
                            <dd class="col-sm-9">@fwFish.Coloration</dd>
                            <dt class="col-sm-3">Temperament:</dt>
                            <dd class="col-sm-9">@fwFish.Temperament</dd>
                            <dt class="col-sm-3">Activity Level:</dt>
                            <dd class="col-sm-9">@fwFish.ActivityLevel</dd>
                            <dt class="col-sm-3">Minimum Tank Size:</dt>
                            <dd class="col-sm-9">@fwFish.MinTankSize gallons</dd>
                            <dt class="col-sm-3">Swimming Region:</dt>
                            <dd class="col-sm-9">@fwFish.SwimmingRegion</dd>
                            <dt class="col-sm-3">Schooling:</dt>
                            <dd class="col-sm-9">@(fwFish.IsSchooling ? $"Yes ({fwFish.RecommendedSchoolSize})" : "No")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-3">Notes:</dt>
                            <dd class="col-sm-9">@Model.Notes</dd>
                        }
                    </dl>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                    <a asp-action="Dashboard" asp-route-id="@Model.Id" class="btn btn-primary float-end">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Growth Tracking</h5>
                </div>
                <div class="card-body">
                    <a asp-controller="GrowthRecord" asp-action="Index" asp-route-livestockId="@Model.Id"
                           class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-bar-chart-line"></i> View Growth Records
                    </a>
                    <a asp-controller="GrowthRecord" asp-action="Create" asp-route-livestockId="@Model.Id"
                           class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> Add Growth Record
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>